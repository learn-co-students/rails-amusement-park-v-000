<p id="notice"><%= notice %></p>

<h1>Users</h1><br>

<table class="table">
  <thead>
    <tr class="row">
      <th scope="col" class="col-3">Name</th>
      <th scope="col" class="col-1">Nausea</th>
      <th scope="col" class="col-1">Happiness</th>
      <th scope="col" class="col-1">Tickets</th>
      <th scope="col" class="col-3">Height</th>
      <th scope="col" class="text-center col-3" colspan="3">Action Buttons</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if !user.admin %>
        <tr class="row">
          <td class="col-3"><%= user.name %></td>
          <td class="col-1"><%= user.nausea %></td>
          <td class="col-1"><%= user.happiness %></td>
          <td class="col-1"><%= user.tickets %></td>
          <td class="col-3"><%= user.height %></td>
          <td class="text-center col-1"><%= link_to 'Show User', user %></td>
          <td class="text-center col-1"><%= link_to 'Edit User', edit_user_path(user) %></td>
          <td class="text-center col-1"><%= link_to 'Delete User', user, method: :delete, data: { confirm: "Are you sure you want to delete #{user.name}?" } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

