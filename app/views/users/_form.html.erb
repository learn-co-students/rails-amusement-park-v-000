
  <%= form_for(user) do |f| %>
    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :height, "Height (in inches)" %><br>
      <%= f.number_field :height, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :happiness, "How happy are you? (1-5 scale)" %><br>
      <%= f.number_field :happiness, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :nausea, "How nauseous are you? (1-5 scale)" %><br>
      <%= f.text_field :nausea, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :tickets, "How many dollars are in your pocket?" %><br>
      <%= f.text_field :tickets, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :admin, "Check box if you are a theme park owner" %>
      <%= f.check_box :admin, class: "form-check-input" %><br>
    </div>
    <div class="form-group">
      <%= f.label :password %><br>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      <div class="actions">
        <br>
        <%= f.submit button_label, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
