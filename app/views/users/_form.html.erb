<%= form_for @user do |f| %>
  Name:<br>
  <%= f.text_field :name %>
  <br></br>
  Height (in inches):<br>
  <%= f.number_field :height %>
  <br></br>
  How happy are you? (1-5 scale) <br>
  <%= f.number_field :happiness %>
  <br></br>
  How nauseous are you? (1-5 scale) <br>
  <%= f.number_field :nausea %>
  <br></br>
  How many dollars are in your pocket? <br>
  <%= f.number_field :tickets %>
  <br></br>
  Password:<br>
  <%= f.password_field :password %>
  <br></br>
  Check box if you are a theme park owner<%= f.check_box :admin, id: "user_admin" %>
  <br></br>
  <%= f.submit %>
<% end %>
