<%= form_for user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
<br />
  <%= f.label :password %>
  <%= f.text_field :password %>
<br />
  <%= f.label :nausea %>
  <%= f.number_field :nausea %>
<br />
  <%= f.label :happiness %>
  <%= f.number_field :happiness %>
<br />
  <%= f.label :height %>
  <%= f.number_field :height %>
<br />
  <%= f.label :tickets %>
  <%= f.number_field :tickets %>
<br />
  <strong> Check box if you are a theme park owner </strong> <%= check_box("user", "admin") %>

  <%= f.submit "Create User" %>
<% end %>
