<%= form_for @user do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %>
        prohibited this user from being saved:
      </h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>

    <br><br>

    <%= f.label :height, "Height (in inches)" %><br>
    <%= f.number_field :height %>

    <br><br>

    <%= f.label :happiness, "How happy are you? (1-5 scale)" %><br>
    <%= f.number_field :happiness %>

    <br><br>

    <%= f.label :nausea, "How nauseous are you? (1-5 scale)" %><br>
    <%= f.number_field :nausea %>

    <br><br>

    <%= f.label :tickets, "How many dollars are in your pocket?" %><br>
    <%= f.number_field :tickets%>

    <br><br>

    <%= f.label :admin, "Check box if you are a theme park owner" %>
    <%= f.check_box :admin , {}, "true", "false" %>

    <br><br>

    <%= f.label :password %>
    <%= f.password_field :password, id: "password" %>

  </div>

  <br><br>

  <div class="actions">
    <%= f.submit 'Create User' %>
  </div>

<% end %>

<br><br>

<p>Existing user? <%= link_to(controller: 'sessions', action: 'create') { 'Log In' } %>
