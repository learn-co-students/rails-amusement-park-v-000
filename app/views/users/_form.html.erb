<%= form_for(@user) do |f| %>
    <%= f.label :name, "Name: " %>
    <%= f.text_field :name %>
<br>
    <%= f.label :height, "Height: " %>
    <%= f.text_field :height %>
<br>
    <%= f.label :happiness, "Happiness: " %>
    <%= f.text_field :happiness %>
<br>
    <%= f.label :nausea, "Nausea: " %>
    <%= f.text_field :nausea %>
<br>
    <%= f.label :admin, "Check box if you are a theme park owner" %>
    <%= f.check_box :admin %>
<br>
    <%= f.label :tickets, "Tickets: " %>
    <%= f.text_field :tickets %>
<br>
    <%= f.label :password, "Password: " %>
    <%= f.text_field :password %>
<br>
    <%= f.submit %>
  <% end %>
