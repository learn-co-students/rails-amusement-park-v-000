<%= form_for(@user) do |f|%>
  <p>Name</p>
  <p><%= f.text_field :name%></p>
  <p>Height (inches)</p>
  <p><%= f.text_field :height%></p>
  <p>How happy are you? (1-5)</p>
  <p><%= f.text_field :happiness%></p>
  <p>How nauseous are you? (1-5)</p>
  <p><%= f.text_field :nausea%></p>
  <p>How many tickets do you have?</p>
  <p><%= f.text_field :tickets%></p>
  <p>Password</p>
  <p><%= f.password_field :password%></p>
    <%= f.label :admin, "Check box if you are a theme park owner" %>
    <%= f.check_box :admin, class: "form-check-input" %><br>
  <%= f.submit%>
<% end %>