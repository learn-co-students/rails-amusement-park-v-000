<%= form_for @user do |f| %>
  <%= f.label :name, "What is your name?" %>
  <%= f.text_field :name %><br>

  <%= f.label :height, "Height, in inches" %>
  <%= f.number_field :height %><br>

  <%= f.label :happiness, "How happy are you, on a scale of 1-5?" %>
  <%= f.number_field :happiness %><br>

  <%= f.label :nausea, "How nauseated are you, on a scale of 1-5?" %>
  <%= f.number_field :nausea %><br>

  <%= f.label :tickets, "How many tickets do you have?" %>
  <%= f.number_field :tickets %><br>

  <%= f.label :admin, "Are you an admin?" %>
  <%= f.check_box :admin %> Yes<br>

  <%= f.label :password %>
  <%= f.password_field :password %><br>
  <br>

  <%= f.submit %>
<% end %>
