<div class="info">
  <div class="center">
    <h1><%= current_user.name %></h1>

    <% if current_user.is_admin? %>
      <h2>ADMIN</h2>
    <% else %>
      <p>Mood: <%= current_user.mood %></p>
      <p>Tickets: <%= current_user.tickets %></p>
      <p>Height: <%= current_user.height %> inches</p>
    <% end %>

    <%= link_to "See attractions", attractions_path %><br><br>

    <%= button_to "Log Out", logout_path %>
  </div>
</div>
