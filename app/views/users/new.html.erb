<h1>Signup</h1>

<%= form_for(@user) do |f| %>
  <%= f.label :name %>
  <%=f.text_field :name %>
  <br>
  <%= f.label :admin, "Please check the box if you are an admin. " %>
  <%=f.check_box :admin %>
  <br>
  <%= f.label :nausea, "From 1-5, how nauseous are you? " %>
  <%=f.text_field :nausea %>
  <br>
  <%= f.label :happiness, "From 1-5, how happy are you? " %>
  <%=f.text_field :happiness %>
  <br>
  <%= f.label :tickets, "Please enter how many tickets you have. " %>
  <%= f.text_field :tickets %>
  <br>
  <%= f.label :height, "Please enter your height in inches. " %>
  <%=f.text_field :height %>
  <br>
  <%= f.label :password %>
  <%=f.password_field :password %>
  <br>
  <%= f.submit %>
<% end %>
