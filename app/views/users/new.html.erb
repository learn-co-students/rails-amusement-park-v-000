<h1> Signup Page </h1>

<%= form_for(@user) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %><br />
    <br />
    <%= f.label :password %>
    <%= f.password_field :password %><br />
    <br />
    <%= f.label :nausea %>
    <%= f.number_field :nausea %><br />
    <br />
    <%= f.label :happiness %>
    <%= f.number_field :happiness %><br />
    <br />
    <%= f.label :tickets %>
    <%= f.number_field :tickets %><br />
    <br />
    <%= f.label :height %>
    <%= f.number_field :height %><br />
    <br />
    <%= f.label :admin %>
    <%= f.text_field :admin %><br />
    <br />
<%= f.submit "Create User" %>
  </div>
<% end %>
