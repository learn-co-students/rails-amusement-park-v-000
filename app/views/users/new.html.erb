<%= form_for @user do |f| %>
  <%= f.text_field :name %>
  <%= f.password_field :password %>
  <%= f.text_field :nausea %>
  <%= f.text_field :happiness %>
  <%= f.text_field :tickets %>
  <%= f.text_field :height %>
  Admin?  <%= f.check_box :admin, options = {:class => "user_admin"} %>
  <%= f.submit %>
<% end %>
