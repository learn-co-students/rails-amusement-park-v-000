<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :nausea %>
  <%= f.number_field :nausea %>
  <br>
  <%= f.label :happiness %>
  <%= f.number_field :happiness %>
  <br>
  <%= f.label :tickets %>
  <%= f.number_field :tickets %>
  <br>
  <%= f.label :height, "Height (in inches)" %>
  <%= f.number_field :height %>
  <br>
  <%= f.label :admin, "Check the box if you are signing up as an admin" %>
  <%= f.check_box :admin %>
  <br>
  <%= f.submit "Create User" %>

<% end %>
