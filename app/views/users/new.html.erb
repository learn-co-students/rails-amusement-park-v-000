<h1>User Signup</h1>

<%= form_for @user do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
      </h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :height, "Height (in inches)" %>
    <br>
    <%= f.number_field :height %>
  </div>

  <div>
    <%= f.label :happiness, "How happy are you? (1-5 scale)" %>
    <br>
    <%= f.number_field :happiness %>
  </div>

  <div>
    <%= f.label :nausea, "How nauseated are you? (1-5 scale)" %>
    <br>
    <%= f.number_field :nausea %>
  </div>

  <div>
    <%= f.label :tickets, "How many dollars are in your pocket?" %>
    <br>
    <%= f.number_field :tickets %>
  </div>

  <div>
    <%= f.label :admin, "Check box if you are a theme park owner" %>
    <%= f.check_box :admin %>
  </div>

  <div>
    <%= f.label :password %>
    <br>
    <%= f.text_field :password %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
