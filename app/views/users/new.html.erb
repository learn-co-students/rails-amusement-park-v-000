
<%= form_for @user do |f| %>
  <%= f.label "Name" %>
  <%= f.text_field :name, class: "form-control" %><br>

  <%= f.label "Height (in inches)" %>
  <%= f.text_field :height, class: "form-control" %><br>

  <%= f.label "How happy are you? (1-5 scale)" %>
  <%= f.text_field :happiness, class: "form-control" %><br>

  <%= f.label "How nauseous are you? (1-5 scale)" %>
  <%= f.text_field :nausea, class: "form-control" %><br>

  <%= f.label "How many dollars are in your pocket?" %>
  <%= f.text_field :tickets, class: "form-control" %><br>

  <%= f.label "Check box if you are a theme park owner" %>
  <%= f.check_box :admin, class: "form-check-input" %><br><br>

  <%= f.label :password %>
  <%= f.password_field :password, class: "form-control" %><br>

  <%= f.submit class: "btn btn-primary" %>
<% end %>