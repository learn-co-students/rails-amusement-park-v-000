<h3>Sign Up</h3>

<%= form_for @user do |f| %>
<label for="user_name">Name</label>
<%= f.text_field :name %><br>
<label for="user_password">Password</label>
<%= f.password_field :password %><br>

<label for="user_height">Height (in inches)</label>
<%= f.text_field :height %><br>

<label for="user_happiness">How happy are you? (1-5 scale)</label>
<%= f.text_field :happiness %><br>

<label for="user_nausea">How nauseous are you? (1-5 scale)</label>
<%= f.text_field :nausea %><br>

<label for="user_tickets">How many dollars are in your pocket?</label>
<%= f.text_field :tickets %><br>

<label for="user_admins">Check box if you are a theme park owner</label>
<%= f.check_box :admin, {}, "true", "false" %><br>


  <%= f.submit "Create User" %>
<% end %>
