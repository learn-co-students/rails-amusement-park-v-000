<%= form_for(@user) do |f| %>

    <%=f.label :name %><br>
    <%= f.text_field :name %><br>

    <%=f.label :password %><br>
    <%= f.text_field :password %><br>

    <%=f.label :height_in_inches %><br>
    <%= f.number_field :height %><br>

    <%=f.label :tickets %><br>
    <%= f.number_field :tickets %><br>

    <%=f.label :nausea %><br>
    <%= f.number_field :nausea %><br>

    <%=f.label :happiness %><br>
    <%= f.number_field :happiness %><br>

    <%=f.label :park_owner %><br>
    <%= f.check_box :admin %><br>

    <%= f.submit "Create User" %>

<% end %>