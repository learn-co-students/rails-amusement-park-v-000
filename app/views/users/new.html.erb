<h1>New User</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
  </div>

  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %><br>
  </div>

  <div class="field">
    <%= f.label :height, "Height (in inches)" %><br>
    <%= f.text_field :height %>
  </div>

  <div class="field">
    <%= f.label :happiness, "How happy are you? (1-5 scale)" %><br>
    <%= f.number_field :happiness, in: 1..5, step: 1 %>
  </div>

  <div class="field">
    <%= f.label :nausea, "How nauseous are you? (1-5 scale)"%><br>
    <%= f.number_field :nausea, in: 1..5, step: 1 %>
  </div>

  <div class="field">
    <%= f.label :tickets, "How many dollars are in your pocket?"%><br>
    <%= f.text_field :tickets %>
  </div>

  <div class="field">
    <%= f.label :admin, "Check box if you are a theme park owner" %>
    <%= f.check_box :admin %>
  </div>

  <%= f.submit "Create User" %>

<% end %>

<%= link_to "Back", '/' %>
