<%= form_for @user do |f| %>
  <%= f.label :name %>
  <p><%= f.text_field :name %></p>
  <%= f.label :height, "Height (in inches)" %>
  <p><%= f.text_field :height %></p>
  <%= f.label :happiness, "How happy are you? (1-5 scale)" %>
  <p><%= f.text_field :happiness %></p>
  <%= f.label :nausea, "How nauseous are you? (1-5 scale)" %>
  <p><%= f.text_field :nausea %></p>
  <%= f.label :tickets, "How many dollars are in your pocket?" %>
  <p><%= f.text_field :tickets %></p>
  <p><%= f.label :admin, "Check box if you are a theme park owner" %>
  <%= f.check_box :admin %></p>
  <%= f.label :password %>
  <p><%= f.password_field :password %></p>
  <%= f.submit %>
<% end %>
