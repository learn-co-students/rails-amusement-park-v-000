<h1>New User</h1>

<%= form_for @user do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :height %>
    <%= f.number_field :height %>
    <br>
    <%= f.label :happiness %>
    <%= f.number_field :happiness %>
    <br>
    <%= f.label :nausea %>
    <%= f.number_field :nausea %>
    <br>
    <%= f.label :tickets, "How many dollars are in your pocket?" %>
    <%= f.number_field :tickets %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <%= f.label :admin, "ADMIN" %>
    <%= f.check_box :admin %>

    <br>
    <%= f.submit %>

<% end %>
