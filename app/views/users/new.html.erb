<%= form_for @user do |f| %>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors: </h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>

    <%= f.label :height, "Height (in inches)" %><br>
    <%= f.number_field :height %><br>

    <%= f.label :happiness, "How happy are you? (1-5 scale)" %><br>
    <%= f.number_field :happiness %><br>

    <%= f.label :nausea, "How nauseous are you? (1-5 scale)" %><br>
    <%= f.number_field :nausea %><br>

    <%= f.label :tickets, "How many dollars are in your pocket?" %><br>
    <%= f.number_field :tickets %><br>

    <%= f.label :admin, "Check box if you are a theme park owner:" %>
    <%= f.check_box :admin %><br>

    <%= f.label :password %> <br>
    <%= f.text_field :password %> <br>
  </div>


  <div>
    <br>
    <%= f.submit %>
  </div>
<% end %>
