
<%= form_for(@user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :password %>
  <%= f.text_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation %>
  <%= f.label :height %>
  <%= f.text_field :height %>
  <%= f.label :tickets %>
  <%= f.text_field :tickets %>
  <h3>Mood</h3>
  <%= f.label :happiness %>
  <%= f.text_field :happiness %>
  <%= f.label :nausea %>
  <%= f.text_field :nausea %>
  <h3>Wanna have the power?</h3>
  <%= f.check_box :admin %>
  <%= f.submit %>
<% end %>