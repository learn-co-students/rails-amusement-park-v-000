<%= form_for(@user) do |f| %>
    <%= f.label :name, "Name: " %>
    <%= f.text_field :name %>

    <%= f.label :height, "Height: " %>
    <%= f.text_field :height %>

    <%= f.label :happiness, "Happiness: " %>
    <%= f.text_field :happiness %>

    <%= f.label :nausea, "Nausea: " %>
    <%= f.text_field :nausea %>

    <%= f.label :admin, "Check box if you are a theme park owner" %>
    <%= f.check_box :admin %>

    <%= f.label :tickets, "Tickets: " %>
    <%= f.text_field :tickets %>

    <%= f.label :password, "Password: " %>
    <%= f.text_field :password %>

    <%= f.submit %>
  <% end %>
