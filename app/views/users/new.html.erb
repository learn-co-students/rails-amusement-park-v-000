<%= form_for :user, url: '/users' do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :height, "Height (in inches)" %>
  <%= f.text_field :height %><br>

  <%= f.label :happiness, "How happy are you? (1-5 scale)" %>
  <%= f.text_field :happiness %><br>

  <%= f.label :nausea, "How nauseous are you? (1-5 scale)" %>
  <%= f.text_field :nausea %><br>

  <%= f.label :tickets, "How many dollars are in your pocket?" %>
  <%= f.text_field :tickets %><br>

  <%= f.label :admin, "Check box if you're a theme park owner." %>
  <%= f.check_box :admin %><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br>

  <%= f.submit "Create User" %>
<% end %>
