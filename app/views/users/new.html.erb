
<%= form_for @user, controller: 'users', action: 'create' do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name" %>
    <br>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
  <%= f.label :password %>
  <br>
  <%= f.password_field :password %>
  </div>
  <!-- <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %> -->


  <div class="form-group">
    <%= f.label :height %>
    <%= f.number_field :height %>
  </div>

  <div class="form-group">


  <%= f.label :happiness%>
  <%= f.number_field :happiness %>
</div>

<div class="form-group">


  <%= f.label :nausea%>
  <%= f.number_field :nausea %>
</div>

<div class="form-group">
 <%= f.label :tickets %>
 <%= f.number_field :tickets %>
</div>

<%= f.label "Check box if you are a theme park owner" %>
<%= f.check_box :admin %>

<br>

  <%= f.submit "Create User" %>
<% end %>
