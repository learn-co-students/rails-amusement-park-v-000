<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
      </h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :name, "What is your name?" %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :height, "How tall are you in inches?" %>
  <%= f.number_field :height %>
  <br>
  <%= f.label :happiness, "How happy are you?" %>
  <%= f.number_field :happiness %>
  <br>
  <%= f.label :nausea, "How nauseous are you?" %>
  <%= f.number_field :nausea %>
  <br>
  <%= f.label :tickets, "How much money do you have in your pocket?" %>
  <%= f.number_field :tickets %>
  <br>
  <%= f.label :admin, "Check here if you're a theme park owner" %>
  <%= f.check_box :admin, {}, "true", "false" %>
  <br>
  <%= f.label :password, "What's your password?" %>
  <%= f.text_field :password %>
  <br>
  <%= f.submit %>
<% end %>