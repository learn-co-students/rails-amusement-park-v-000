<h1>Signup</h1>

<%= form_for(@user, html:{class: "new_user"}) do |f| %>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :height, "Height (in inches)" %><br>
    <%= f.text_field :height, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :happiness, "How happy are you? (1-5 scale)" %><br>
    <%= f.text_field :happiness, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :nausea, "How nauseous are you? (1-5 scale)" %><br>
    <%= f.text_field :nausea, class: 'form-control' %>
  </div>
  <div class="form-group">
      <%= f.label :tickets, "How many dollars are in your pocket?" %><br>
      <%= f.text_field :tickets, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :admin, "Checkbox if you are a themepark owner" %>
    <%= f.check_box :admin %>
  </div>
  <div class="form-group">
    <%= f.label :password %><br>
    <%= f.password_field :password, class: 'form-control' %>
  </div>
  <%= f.submit "Create User" %>
<% end %>

<%= link_to "Back to homepage", root_path %>
