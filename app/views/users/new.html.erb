<h1>Sign Up</h1>
<%= form_for @user do |f| %>
	<%= f.label :name %><br>
	<%= f.text_field :name %><br>

	<%= f.label :height, 'Height (in inches)' %><br>
	<%= f.text_field :height %><br>


	<%= f.label :happiness, 'How happy are you? (1-5 scale)' %><br>
	<%= f.text_field :happiness %><br>

	<%= f.label :nausea, 'How nauseous are you? (1-5 scale)'%><br>
	<%= f.text_field :nausea %><br>

	<%= f.label :tickets, 'How many tickets do you have?' %><br>
	<%= f.text_field :tickets %><br><br>

  <%= f.label :password, 'Choose a password:' %> <br>
	<%= f.password_field :password %> <br>

  <%= f.label :password_confirmation, 'Password Confirmation:' %><br>
  <%= f.password_field :password_confirmation %><br><br>

	<%= f.label :admin, 'Check this box if you are a theme park owner' %>
	<%= f.check_box :admin %><br><br>


	<%= f.submit 'Create User'%>

	<% end %>
