<h2>Create New User</h2>
<%= form_for @user do |f| %>
<p><%= f.label :name %><br>
<%= f.text_field :name %></p>

<p><%= f.label :height, 'Height (in inches)' %><br>
<%= f.number_field :height %></p>

<p><%= f.label :happiness, 'How happy are you? (1-5 scale)' %><br>
<%= f.number_field :happiness %></p>

<p><%= f.label :nausea, 'How nauseous are you? (1-5 scale)' %><br>
<%= f.number_field :nausea %></p>

<p><%= f.label :tickets, 'How many dollars are in your pocket?' %><br>
<%= f.number_field :tickets %></p>

<p><%= f.label :admin, 'Check box if you are a theme park owner' %>
<%= f.check_box :admin %></p>

<p><%= f.label :password %><br>
<%= f.password_field :password %></p>

<%= f.submit "Create User" %>
<% end %>