<p><%= flash[:notice] %></p>
<% if @message %>
    <p><%= @message %></p>
<% end %>

<h1><%=@user.name%> </h1>

<h3>Mood: <%=@user.mood%> </h3>
<h3>Happiness: <%=@user.happiness%></h3>
<h3>Nausea: <%=@user.nausea%></h3>
<h3>Height: <%=@user.height %></h3>
<h3>Tickets: <%=@user.tickets %></h3>
<% if @user.admin? %>
<h3>ADMIN</h3>
<% end %>

<p><%= link_to "See attractions", attractions_path %></p>
