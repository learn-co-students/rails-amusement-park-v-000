<!-- users/show -->
<% if flash[:alert] %>
  <div class="center alert">
    <p><%= flash[:alert] %></p>
  </div>
<% end %>
<div class="center">
  <div class="info">
    <% if @user.admin %>
      <p><strong>ADMIN</strong></p>
    <% end %>
    <p><strong>Name:</strong> <%= @user.name %></p>
    <p><strong>Tickets:</strong> <%= @user.tickets %></p>
    <p><strong>Mood:</strong> <%= @user.mood %></p>
    <p><strong>Height:</strong> <%= @user.height %> <%= "inches" if @user.height %></p>
    <p><%= link_to  "See attractions", attractions_path, :class => "link" %></p>
  </div>
</div>
