<% if !@message.nil? %>
  <p><h3><%= @message %></h3></p>
<% end %>

<% if !@user.admin %>
  <p>Name: <%= @user.name %></p>
  <p>Tickets: <%= @user.tickets %></p>
  <p>Mood: <%= @user.mood %></p>
  <p>Height: <%= "#{@user.height} inches" %></p>
<% else %>
  <p><h3><%= "ADMIN #{@user.name}" %></h3></p>
<% end %>

<p><%= link_to "See attractions", attractions_path %></p>

<p><%= link_to "Log Out", "/logout" %></p>
