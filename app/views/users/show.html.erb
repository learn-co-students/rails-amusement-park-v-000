<p>Welcome to the theme park!</p>

<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>

<% if @user.admin? %>
  <h5><strong>ADMIN</strong></h5>
<% end %>

<%= label_tag "Name: " %>
<%= @user.name %><br>

<%= label_tag "Tickets: " %>
<%= @user.tickets %><br>

<%= label_tag "Mood: " %>
<%= @user.mood %><br>

<%= label_tag "Height: " %>
<%= @user.height %><br>

<%= link_to "See attractions", attractions_path %> <br>
<%= link_to "Log Out", logout_path, method: :post %>
<%= link_to "Back", :back %>
