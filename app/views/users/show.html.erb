
<h2><%= @user.name %><%= " - ADMIN" if @user.admin %></h2>

<% if !!flash[:message] %>
  <%= "#{flash[:message]}" %>
<% end %>

<h3><%= "Mood: #{@user.mood}" %></h3>
<%= link_to "See attractions", attractions_path %>
<br>
<ul>
<% @user.attributes.each_pair do |key, value| %>
  <p>
  <%=  "#{key.capitalize}: #{value}" %>
  </p>
  <br>
<% end %>
</ul>

<%= link_to "Log Out", logout_path %>
