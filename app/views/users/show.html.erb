<% if flash[:message] %>
  <h3><%= flash[:message] %></h3>
<% end %>

<h1>User: <%= @user.name %></h1>
<% if @user.admin? %>
  <h3>ADMIN</h3>
<% else %>
  <h3>Height: <%= @user.height %></h3>
  <h3>Tickets: <%= @user.tickets %></h3>
  <h3>Mood: <%= @user.mood %></h3>
<% end %>

<%= link_to "See attractions", attractions_path %>

<%= link_to "Log Out", "/logout" %>
