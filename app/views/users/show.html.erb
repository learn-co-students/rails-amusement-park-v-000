<div class='center'>
  <% if flash[:message] %>
    <div><%= flash[:message].join("<br />") %></div>
  <% end %>
  <div class='info'>
    <p><strong><%= "ADMIN" if @user.admin %></strong></p>
    <p><strong>Name:</strong>
    <%= @user.name %>
    </p>
    <p><strong>Tickets:</strong>
    <%= @user.tickets %>
    </p>
    <p><strong>Mood:</strong>
    <%= @user.mood %>
    </p>
    <p><strong>Height:</strong>
    <%= @user.height %> inches
    </p>
    <p><%= link_to "See attractions", attractions_path %>
  </div>
</div>
