<h1><%= @user.name %>'s Profile</h1>
<p style="color: red;"><%= flash[:not_authorized] %></p>
<p style="color: green;"><%= flash[:signed_up] %></p>
<p style="color: blue;"><%= flash[:signed_in] %></p>
<p style="color: blue;"><%= flash[:ride_message] %></p>

<section class="info">
  <p><strong><%= "ADMIN" if @user.admin %></strong></p> 
  <p><strong>Name:</strong> <%= @user.name %></p>
  <p><strong>Mood:</strong> <%= @user.mood %></p>
  <p><strong>Tickets:</strong> <%= @user.tickets %></p>
  <p><strong>Height:</strong> <%= @user.height %> inches</p>

  <% if @user == current_user %>
    <p><%= link_to "See attractions", attractions_path %></p> <!-- I added that to the navbar originally, but this looks like the demo. -->
  <% end %>
</section>
