<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h1>Welcome, <%= @user.name %>!</h1>

<% if @user.admin == true %>
  <p>ADMIN</p><br>

  <p><%= link_to 'New Attraction', new_attraction_path %></p>

<% else %>
  <p>Mood: <%= @user.mood %> </p>
  <p>Number of Tickets: <%= @user.tickets %></p>
  <p>Height: <%= @user.height %> inches</p>
<%end %>

<p><%= link_to 'See attractions', attractions_path %></p>
<p><%= link_to 'Log Out', logout_path %></p>
