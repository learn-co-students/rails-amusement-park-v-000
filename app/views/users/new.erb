<h1>Sign Up for Amusement Park</h1>

<%= form_for @user, html: {class: "form"} do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "Height (in inches)" %>
    <%= f.text_field :height, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "How happy are you? (1-5 scale)" %>
    <%= f.text_field :happiness, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "How nauseous are you? (1-5 scale)" %>
    <%= f.text_field :nausea, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "How many dollars are in your pocket?" %>
    <%= f.text_field :tickets, class: "form-control" %>
  </div>
  <div class="form-group">
<!-- object_name.check_box(method, options = {}, checked_value = "1", unchecked_value = "0") -->
    <%= f.label "Check box if you are a theme park owner " %>
    <%= f.check_box(:admin, :value => :admin) %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <%= f.submit "Create User" %>
<% end %>
