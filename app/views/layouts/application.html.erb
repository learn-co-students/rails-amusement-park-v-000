<!DOCTYPE html>
<html>
  <head>
    <title>RailsAmusementPark</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>Ï€
          </button>
        <a class="navbar-brand" href="<%= root_url %>"/>Home</a>
        <% if current_user %>
          <a class="navbar-brand" href="<%= user_path(current_user) %>"/><%= @user.name %>'s profile</a>
          <%= link_to 'Log Out', user_path(current_user), method: :delete,  class: "navbar-brand"%>
        <% else %>
          <a class="navbar-brand" href="<%= '/users/new' %>"/>Sign Up</a>
          <a class="navbar-brand" href="<%= '/signin' %>"/>Log In</a>
        <% end %>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">

          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <!-- content -->
    <div class="container"  role="main">
      <%= yield %>
    </div>
  </body>
</html>
