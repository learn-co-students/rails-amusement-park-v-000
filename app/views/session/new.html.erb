<%= form_tag('/session', method: :post) do %>

  <div class="form-group">
    <%= label_tag(:name, "Your name:") %>
    <%= text_field_tag(:name, nil, class: "form-control") %>
  </div>

  <div class="form-group">
    <%= label_tag(:password, "Your password:") %>
    <%= password_field_tag(:password, nil, class: "form-control") %>
  </div>

  <div class="actions">
    <%= submit_tag("Sign In") %>
  </div>

<% end %>