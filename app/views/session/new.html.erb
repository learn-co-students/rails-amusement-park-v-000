<%= form_tag('/session', method: :post) do %>
	
	<div class="form-group">
		<%= label_tag(:name, "Your Name:") %>
		<%= collection_select(:user, :name, User.all, :name, :name, prompt: "Please select your username.") %>
	</div>

	<div class="field">
		<%= label_tag(:password, "Password:") %>
		<%= password_field_tag(:password) %>
	</div>

	

	<div class="action">
		<%= submit_tag "Sign In" %>
	</div>

<% end %>	