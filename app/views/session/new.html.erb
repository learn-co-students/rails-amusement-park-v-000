<h1>Log In</h1>

<%= form_tag('/session', method: :post) do %>
  <%= label_tag(:name, "Your name:") %>
  <%= collection_select(:user, :name, User.all, :name, :name, prompt: 
  "Please Select a Username")%>
  <br>
  <%= label_tag(:password, "Password:") %>
  <%= password_field_tag :password%>
  <br>
  <%= submit_tag("Sign In") %> Or <%= link_to(controller: 'users', action: 'new') { 'sign up' } %>
<% end %>
