<%= form_for @attraction, controller: 'attractions', action: 'update' do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, :placeholder => @attraction.name%>

  <%= f.label :min_height %>
  <%= f.number_field :min_height, :placeholder => @attraction.min_height%>

  <%= f.label :happiness_rating %>
  <%= f.number_field :happiness_rating, :placeholder => @attraction.happiness_rating%>

  <%= f.label :tickets %>
  <%= f.number_field :tickets, :placeholder => @attraction.tickets%>

  <%= f.label :nausea_rating %>
  <%= f.number_field :nausea_rating, :placeholder => @attraction.nausea_rating%>

  <%= f.submit "Update Attraction" %>
<% end %>
