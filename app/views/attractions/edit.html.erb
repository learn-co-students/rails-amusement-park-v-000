<%= form_for @attraction do |f| %>
    <br><%= f.label :name %>
    <br><%= f.text_field :name %>
    <br><%= f.label :min_height, "Height Requirement (in inches)" %>
    <br><%= f.text_field :min_height %>
    <br><%= f.label :happiness_rating, "How fun is it? (1-5 scale)" %>
    <br><%= f.text_field :happiness_rating %>
    <br><%= f.label :nausea_rating, "How nausea-inducing is it? (1-5 scale)" %>
    <br><%= f.text_field :nausea_rating %>
    <br><%= f.label :tickets, "How many tickets does it cost?" %>
    <br><%= f.text_field :tickets %>
    <br><%= f.submit "Update Attraction" %>
<% end %>
<%= link_to "Show", @attraction %>
<%= link_to "Back", attractions_path %>