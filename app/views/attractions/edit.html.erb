
    <%= form_for(@attraction) do |f| %>
        <%= f.label :name %><br>
        <%= f.text_field :name %><br>
        <%= f.label :min_height, "Height (in inches):" %><br>
        <%= f.number_field :min_height %><br>
        <%= f.label :happiness_rating, "Mood:" %><br>
        <%= f.number_field :happiness_rating %><br>
        <%= f.label :nausea_rating, "Nausea:" %><br>
        <%= f.number_field :nausea_rating %><br>
        <%= f.label :tickets, "Tickets:" %><br>
        <%= f.number_field :tickets %><br><br>
        <%= f.submit %><br>
     <% end %>
