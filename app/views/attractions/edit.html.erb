<strong> Edit an Attraction </strong> 
<%= form_for(@attraction) do |f| %> 
    <%= f.label :name, "Name of ride" %> 
    <%= f.text_field :name %></br>
    <%= f.label :min_height, "Minimum required height" %> 
    <%= f.number_field :min_height %> </br>
    <%= f.label :happiness_rating, "How happy will this ride make people?" %> 
    <%= f.number_field :happiness_rating %></br> 
    <%= f.label :nausea_rating, "How nauseaus is this rhappiness_rating" %> 
    <%= f.number_field :nausea_rating%></br> 
    <%= f.label :tickets, "Number of tickets to ride" %> 
    <%= f.number_field :tickets %></br> 
    <%= f.submit "Update Attraction" %>
    <% end %>