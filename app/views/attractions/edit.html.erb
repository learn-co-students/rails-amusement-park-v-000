<h1>New Attraction</h1>

<%= form_for @attraction do |f| %>
  <%= f.label :name, "Name" %><br>
  <%= f.text_field :name, value: @attraction.name %>

  <%= f.label :min_height, "Height Requirement (in inches)" %><br>
  <%= f.number_field :min_height, value: @attraction.min_height %>

  <%= f.label :happiness_rating, "How fun is it? (1-5 scale)" %><br>
  <%= f.number_field :happiness_rating, value: @attraction.happiness_rating %>

  <%= f.label :nausea_rating, "How nausea-inducing is it? (1-5 scale)" %><br>
  <%= f.number_field :nausea_rating, value: @attraction.nausea_rating %>

  <%= f.label :tickets, "How many tickets does it cost?" %><br>
  <%= f.number_field :tickets, value: @attraction.tickets %>

  <%= f.submit "Update Attraction" %>

<% end %>
