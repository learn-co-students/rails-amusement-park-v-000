<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Tickets</th>
			<th>Details</th>
		</tr>
	</thead>
	<tbody>
<% @attractions.each do |attraction| %>
		<tr>
			<td><%= attraction.name %></td>
			<td><%= attraction.tickets %></td>
			<td><%= link_to attraction.index_link(@user), attraction_path(attraction) %></td>
		</tr>
<% end %>
	</tbody>
</table>

<% if @user.admin %>
	<%= link_to "New Attraction", attractions_new_path %>
<% end %>