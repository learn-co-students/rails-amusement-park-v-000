<h1>Welcome to the Attractions Page</h1>

<% if @current_user.admin %>
 <%= link_to "New Attraction", '/attractions/new' %>
<% end %><br>

<% @attractions.each do |attraction| %>

  <ul><%= attraction.name %>
    <% if @current_user.admin %>
      <%= link_to "Show #{attraction.name}", attraction_path(attraction) %>
    <% end %>
      <li>Tickets: <%= attraction.tickets %></li>
      <li><%= link_to "Go on #{attraction.name}", attraction_path(attraction) %>
    </ul>
<% end %>
