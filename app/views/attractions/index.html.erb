<p id="notice"><%= notice %></p>

<h1>Listing Attractions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tickets</th>
      <th>Nausea rating</th>
      <th>Happiness rating</th>
      <th>Min height</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attractions.each do |attraction| %>
      <tr>
        <td><%= attraction.name %></td>
        <td><%= attraction.tickets %></td>
        <td><%= attraction.nausea_rating %></td>
        <td><%= attraction.happiness_rating %></td>
        <td><%= attraction.min_height %></td>
        <%- if current_user.admin %>
          <td><%= link_to "Show #{attraction.name}", attraction %></td>
        <%- else %>
          <td><%= link_to "Go on #{attraction.name}", attraction %></td>
        <%- end %>
        <td><%= link_to 'Edit', edit_attraction_path(attraction) %></td>
        <td><%= link_to 'Destroy', attraction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%- if current_user.admin %>
  <p><%= link_to 'New Attraction', new_attraction_path %></p>
<% end %>