All Attractions

<% Attraction.all.each do |attraction| %>
  <% if @user.admin %>
    <%= link_to "Show #{attraction.name}", attraction_path(attraction) %>
    <%= link_to "Edit #{attraction.name}", attractions_edit_path(attraction) %>
  <% else %>
    <%= link_to "Go on #{attraction.name}", attraction_path(attraction) %>
  <% end %>
<% end %>

<% if @user.admin %>
  <%= link_to "New Attraction", attractions_new_path %>
<% end %>