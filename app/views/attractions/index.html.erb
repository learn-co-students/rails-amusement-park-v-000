<h1>Listing Attractions</h1>

<table class="table">
    <thead>
        <tr>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><strong>Name</strong></td>
            <td><strong>Tickets</strong></td>
            <td><strong>Detail</strong></td>
        </tr>
        <% @attractions.each do |attraction|%>
            <tr> 
                <td><%=attraction.name%></td>
                <td><%=attraction.tickets%></td>
                <td><%=link_to "Show #{attraction.name}", attraction_path(attraction) if admin?%></td>
                <td><%=link_to "Go on #{attraction.name}", attraction_path(attraction) if !admin?%></td>
            </tr>
        <%end%>
        <%= link_to "New Attraction" , new_attraction_path if admin? %>
    </tbody>
</table>