<% @attractions.each do |a| %>
  <% if current_user.admin %>
    <p><%= a.name %> <%= link_to "Show #{a.name}", attraction_path(a) %></p>
  <% else %>
    <p><%= a.name %> <%= link_to "Go on #{a.name}", attraction_path(a) %></p>
  <% end %>
<% end %>

<% if current_user.admin %>
  <%= link_to "New Attraction", new_attraction_path %>
<% end %>
