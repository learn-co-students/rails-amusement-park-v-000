<h1>Attractions</h1>
<% @attractions.each do |attraction| %>
  <%= attraction.name %><br>
  <% if current_user.admin %>
    <%= link_to "Show #{attraction.name}", attraction_path(attraction) %><br></br>
  <% else %>
    <%= link_to "Go on #{attraction.name}", attraction_path(attraction) %><br></br>
  <% end %>
<% end %>

<% if current_user.admin %>
  <%= link_to "New Attraction", new_attraction_path %>
<% end %>
