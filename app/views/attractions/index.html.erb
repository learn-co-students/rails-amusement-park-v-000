<h1>Listing Attractions</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tickets</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
    <% @attractions.each do |attraction| %>
    <tr>
      <td><%= attraction.name %></td>
      <td><%= attraction.tickets %></td>
      <td><%= link_to "Go on #{attraction.name}", attraction_path(attraction) if !current_user.admin %></td>
      <td><%= link_to "Show #{attraction.name}", attraction_path(attraction) if current_user.admin %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.admin %>
  <%= link_to "New Attraction", new_attraction_path %>
<% end %>
