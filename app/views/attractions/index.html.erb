<div style="width: 960px; margin: 0 auto; text-align: center">
  <h1>Attractions</h1>
  <div style="width: 300px; margin: 50px auto; text-align: left" %>
    <ul>
      <% @attractions.each do |attraction| %>
        <li>
          <% if current_user_is_admin? %>
            <%= link_to "Show #{attraction.name}", attraction_path(attraction) %>
          <% else %>
            <%= link_to "Go on #{attraction.name}", attraction_path(attraction) %>
          <% end %>
        </li>
      <% end %>
    </ul>
    <%= link_to 'New Attraction', new_attraction_path if current_user_is_admin? %>
  </div>
</div>
