<h1>Attractions</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

<% @attractions.each do |attraction| %>
  <tr>
    <td><%= attraction.name %></td>
    <td><%= attraction.tickets %></td>
    <% if admin? %>
      <td><%= link_to "Show #{attraction.name}", attraction_url(attraction) %></td>
    <% else %>
      <td><%= link_to "Go on #{attraction.name}", attraction_url(attraction) %></td>
    <% end %>
  </tr>
<% end %>

<tr>
  <td><%= link_to "New Attraction", new_attraction_url %></td>
  <td colspan="2"></td>
</tr>
</table>
