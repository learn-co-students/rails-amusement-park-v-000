<h1>Listing Attractions</h1>
<table class="table">
	<thead>
		<tr>
			<th colspan = 3></th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td><strong>Name</strong></td>
			<td><strong>Tickets</strong></td>
			<td><strong>Details</strong></td>
		</tr>
		<% @attractions.all.each do |attraction| %>
			<tr>
				<td><strong><%= attraction.name %></strong></td>
				<td><strong><%= attraction.tickets %></strong></td>
				<% if !current_user.admin %>
					<td><strong><%= link_to 'Go on ' + attraction.name, attraction_path(attraction) %></strong></td>
				<% else %>
					<td><strong><%= link_to 'Show ' + attraction.name, attraction_path(attraction) %></strong></td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>
<% if current_user.admin %>
	<%= link_to 'New Attraction', new_attraction_path %>
<% end %>
