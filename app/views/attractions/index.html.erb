<%@attractions.each do |attraction|%>
<h3><%=attraction.name%></h3>
<strong>Nausea rating:</strong> <%=attraction.nausea_rating%><br>
<strong>Happiness rating:</strong> <%=attraction.happiness_rating%><br>
<strong>Minimum required height:</strong> <%=attraction.min_height%><br>
<strong>Tickets required:</strong> <%=attraction.tickets%><br>
<%=link_to "Show #{attraction.name}", attraction_path(attraction)%><br>
  <%if !current_user.admin%>
    <%=link_to "Go on #{attraction.name}", attraction_path(attraction)%><br><br>
  <%end%>
<%end%>
<% if current_user.admin%>
  <%= link_to "New Attraction", new_attraction_path%>
<%end%>
