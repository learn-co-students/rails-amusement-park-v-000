<h1>Attractions</h1>

<% if current_user.admin %>
  <% @attractions.each do |a| %>
    <p><%= link_to("Show #{a.name}", attraction_path(a)) %></p>
  <% end %>
  <%= link_to("New Attraction", new_attraction_path) %>
<% else %>
<table>
  <th>Name</th>
  <th>Tickets</th>
  <th>Link to Ride</th>
  <% @attractions.each do |a| %>
  <tr>
    <td><%= a.name %></td>
    <td><%= a.tickets %></td>
    <td><%= link_to("Go on #{a.name}", attraction_path(a)) %></td>
  </tr>
  <% end %>
</table>
<% end %>
