<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Tickets</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        <% @attractions.each do |attraction| %>
            <tr>
                <td><%= attraction.name %></td>
                <td><%= attraction.tickets %></td>
                <% if current_user.admin %>
                    <!-- these stumped me. I saw them in the test but didn't believe it
                    until I peeped the solution - yep, go ahead and use Ruby interpolation
                    with ERB -->
                    <td><%= link_to "Show #{attraction.name}", attraction_path(attraction) %></td>
                <% else %>
                    <td><%= link_to "Go on #{attraction.name}", attraction_path(attraction) %></td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>
<% if current_user.admin %>
    <%= link_to "New Attraction", new_attraction_path %>
<% end %>