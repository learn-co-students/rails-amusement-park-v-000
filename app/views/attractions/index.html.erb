<p id="notice"><%= notice %></p>

<h1>Attractions</h1>

<table>
  <thead>
    <tr>
      <th colspan="3">Name</th>
      <th colspan="3">Tickets</th>
      <th colspan="3">Details</th>
    </tr>
  </thead>

  <tbody>
    <% @attractions.each do |attraction| %>
      <tr>
        <td colspan="3"><%= attraction.name %></td>
        <td colspan="3"><%= attraction.tickets %></td>
        <td colspan="3"><%= link_to table_display(attraction), attraction %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attraction', new_attraction_path %>
