<ul>


<% @attractions.each do |attraction| %>
<% if current_user.admin %>
<li><%= link_to "Show #{attraction.name}", attraction_path(attraction.id) %></li>
<% end %>
<% if !current_user.admin %>
<li><%= link_to "Go on #{attraction.name}", attraction_path(attraction.id)  %>
</li>
<% end %>
<br>
<% end %>
</ul>


<% if current_user.admin? %>
<%= link_to "New Attraction", new_attraction_path(@attraction) %>
<% end %>
