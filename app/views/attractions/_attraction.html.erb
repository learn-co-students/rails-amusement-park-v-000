<ul>
  <li>
    Name: <%= attraction.name %>
  </li>
  <li>
    Ticket Requirement: <%= attraction.tickets %>
  </li>
  <li>
    Height Requirement: <%= attraction.min_height %>
  </li>
  <li>
    Nausea Rating: <%= attraction.nausea_rating %>
  </li>
  <li>
    Happiness Rating: <%= attraction.happiness_rating %>
  </li>
  <li>
    <%= link_to "See attractions", attractions_path %>
  </li>


  <% if current_user.admin %>
    <p><%= link_to "Edit Attraction", edit_attraction_path %></p>
  <% end %>

  <%= form_tag(rides_new_path) do %>
    <%= hidden_field_tag 'user_id', "#{user.id}" %>
    <%= hidden_field_tag 'attraction_id', "#{attraction.id}" %>
    <%= submit_tag("Go on this ride", :id => "button") %>
  <% end %>


</ul>
