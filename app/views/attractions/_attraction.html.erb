<%= form_for attraction do |f| %>
    <p><%= f.label :name, "Name" %>
    <%= f.text_field :name %></p>

    <p><%= f.label :min_height, "Height Requirement (in inches)" %>
    <%= f.text_field :min_height %></p>

    <p><%= f.label :happiness_rating, "How fun is it? (1-5 scale)" %>
    <%= f.text_field :happiness_rating %></p>

    <p><%= f.label :nausea_rating, "How nausea-inducing is it? (1-5 scale)" %>
    <%= f.text_field :nausea_rating %></p>

    <p><%= f.label :tickets, "How many tickets does it cost?" %>
    <%= f.text_field :tickets %></p>

    <p><%= f.submit %></p>
<% end %>


