<div class="info">
  <div class="center">
    <h1><u><%= @attraction.name %></u></h1>
    <h3>Tickets Required: <%= @attraction.tickets %></h3>
    <h3>Minimum Height: <%= @attraction.min_height %></h3>
    <h4>Nausea Rating: <%= @attraction.nausea_rating %> | Happiness Rating: <%= @attraction.happiness_rating %></h4>
    <h4>Total Number of Rides: <%= @attraction.rides.count %></h4>
    <br>
    <%= link_to "See All Attractions", attractions_path %>
    <br><br>
    <% if current_user.is_admin? %>
      <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
    <% else %>
      <%= form_tag attraction_rides_path(@attraction) do %>
        <%= hidden_field_tag :attraction_id, value: @attraction.id %>
        <%= hidden_field_tag :user_id, current_user.id %>
        <%= submit_tag "Go on this ride" %>
      <% end %>
    <% end %>
  </div>
</div>
