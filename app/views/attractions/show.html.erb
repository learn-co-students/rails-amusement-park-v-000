<h1><%= @attraction.name %></h1>
Tickets Cost: <%= @attraction.tickets %><br />
Nausea Rating: <%= @attraction.nausea_rating %><br />
Happiness Rating: <%= @attraction.happiness_rating %><br />
Min. Height: <%= @attraction.min_height %><br />
<br />

<% if current_user.admin %>

            <%= link_to "Edit Attraction: Show #{@attraction.name}", edit_attraction_path(@attraction) %>
<% else %>
        <form action="/rides" method="post">
        <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
        <%= tag(:input, :type => "hidden", :name => :user_id, :value => current_user.id) %>
        <%= tag(:input, :type => "hidden", :name => :attraction_id, :value => @attraction.id) %>
        <input class="btn btn-light" type="submit" value="Go on this ride">
      </form>
<% end %>
<br>
<br>
<p><%= link_to 'All Attractions', attractions_path %></p>
