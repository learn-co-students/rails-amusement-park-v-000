<h1><%= @attraction.name %></h1>
<p>Tickets <%= @attraction.tickets %></p>
<p>Nausea Rating <%= @attraction.nausea_rating %></p>
<p>Happiness Rating <%= @attraction.happiness_rating %></p>
<p>Minimum Height <%= @attraction.min_height %></p>
<p>
<% if is_admin? %>
    <%= link_to 'Edit Attraction', edit_attraction_path %>
<% else %>  
    <%= button_to 'Go on this ride', 
        { :controller => 'rides',  :action=>"create", :id => @user.id, :attraction_id => @attraction.id} ,
        :method => :post %>
<% end %>
</p>

