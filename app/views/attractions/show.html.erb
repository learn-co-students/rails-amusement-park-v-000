<br>
  <div>
    <p>Name: <%= @attraction.name %> </p>
    <p>Total Number of Users: <%= @attraction.users.all.count %></p>
    <p>Ticket Requirement: <%= @attraction.tickets %> </p>
    <p>Height Requirement: <%= @attraction.min_height %> </p>
    <p>Nausea Rating: <%= @attraction.nausea_rating %> </p>
    <p>Happiness Rating: <%= @attraction.happiness_rating %> </p>

    <% if current_user.admin %>
      <p><%= link_to "Edit Attraction", edit_attraction_path(@attraction) %></p>
    <% else %>
      <%= form_tag rides_path, :method => "POST" do %>
        <%= hidden_field_tag "ride[user_id]", current_user.id %>
        <%= hidden_field_tag "ride[attraction_id]", @attraction.id %>
        <%= submit_tag "Go on this ride" %>
      <% end %>
    <% end %>
  </div>
  <br>

<%= link_to 'Log Out', signout_path %>
