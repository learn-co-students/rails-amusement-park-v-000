<p>Name: <%= @attraction.name %></p>

<p>Total Number of Users: <%= @number_of_users %></p>

<p>Ticket Requirement: <%= @attraction.tickets %></p>

<p>Height Requirement: <%= @attraction.min_height %> inches</p>

<p>Nausea Rating:<%= @attraction.nausea_rating %></p>

<p>Happiness Rating:<%= @attraction.happiness_rating %></p>

<% if current_user.admin == true %>
  <%= link_to "Edit Attraction", edit_attraction_path %>
<% else %>
  <%= form_tag('/rides') do %>
    <input name="ride[user_id]" type="hidden" id="ride_user_id" value="<%= current_user.id %>"><br>
    <input name="ride[attraction_id]" type="hidden" id="attraction_user_id" value="<%= @attraction.id %>"><br>

    <input type="submit" value='Go on this ride'>
   <% end %>
<% end %>
