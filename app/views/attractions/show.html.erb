<div class="center">

  <div class="pic">
    <img src="https://media.timeout.com/images/103893250/1372/772/image.jpg" height="250">
  </div>

  <div class="info">

    <strong>Name:</strong> <%= @attraction.name %><br>
    <strong>Ticket requirements:</strong> <%= @attraction.tickets %><br>
    <strong>Height requirements:</strong> <%= @attraction.min_height %> inches<br>
    <strong>Nausea Rating:</strong> <%= @attraction.nausea_rating %><br>
    <strong>Happiness Rating:</strong> <%= @attraction.happiness_rating %><br><br>

    <% if current_user.admin %>
      <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %><br>
      <%= link_to "Back", attraction_path %>
    <% else %>
      <%= form_for @ride, url: rides_new_path, method: :post do |f| %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <%= f.hidden_field :attraction_id, :value => @attraction.id %>
        <%= f.submit "Go on this ride" %>
      <% end %>
    <% end %>
  </div>
</div>
