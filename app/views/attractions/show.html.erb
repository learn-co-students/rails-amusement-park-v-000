<% if current_user.admin %>
	<%= link_to "New Attraction", new_attraction_path %><br>
	<%= link_to "Edit", edit_attraction_path %><br>
	<%= link_to "Delete", attraction_path(@attraction), method: :delete, data: { confirm: 'Are you sure?' } %>

<% else %>

	<%= form_for @ride do |f| %>
		<%= f.hidden_field :user_id, value:current_user.id %>
		<%= f.hidden_field :attraction_id, value:@attraction.id %>
		<%= f.submit "Go on this ride" %>
	<% end %>


<% end %> 