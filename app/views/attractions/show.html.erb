<h1>Welcome to <%= @attraction.name %> </h1>

<% if !current_user.admin %>
    <%= form_tag ('/rides/new') do %>
        <%= hidden_field_tag :name => request_forgery_protection_token.to_s, :value => form_authenticity_token %>
        <%= hidden_field_tag :user_id, current_user.id %>
        <%= hidden_field_tag :attraction_id, @attraction.id %>
        <%= button_tag "Go on this ride" %>
    <% end %>
<% else %>
    <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% end %>



