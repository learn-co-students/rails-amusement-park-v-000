<div class="center">
  <div class="info">
    <p><strong>Name:</strong> <%= @attraction.name %></p>
    <p><strong>Total Number of Users:</strong> <%= @attraction.user_count %></p>
    <p><strong>Ticket Requirement:</strong> <%= @attraction.tickets %></p>
    <p><strong>Height Requirement:</strong> <%= @attraction.min_height %> inches</p>
    <p><strong>Nausea Rating:</strong> <%= @attraction.nausea_rating %></p>
    <p><strong>Happiness Rating:</strong> <%= @attraction.nausea_rating %></p>
    <% if current_user.admin %>
      <%= link_to "Edit Attraction", edit_attraction_path(@attraction), :class => "link" %>
    <% else %>
      <%= form_tag rides_path, :method => "POST" do %>
        <%= hidden_field_tag "ride[user_id]", current_user.id %>
        <%= hidden_field_tag "ride[attraction_id]", @attraction.id %>
        <div class="actions"><%= button_tag "Go on this ride" %></div>
      <% end %>
    <% end %>
  </div>
</div>
