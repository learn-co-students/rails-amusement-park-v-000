<%="#{@attraction.name}"%> <br>


  <%=form_tag ({controller: 'attractions', action: 'ride', method: 'post'}) do %>
    <%=hidden_field_tag 'attraction_id', params[:id]%>
    <%=submit_tag "Go on this ride"%>
<%end%>
<%=link_to "See attractions", attractions_path%><br>

<%if @user.admin%>
  <%=link_to "Edit Attraction", edit_attraction_path(@attraction)%>
<%end%>
