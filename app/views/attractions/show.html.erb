<h1>Name: <%=@attraction.name%></h1>
<p>Tickets: <%=@attraction.tickets%></p>
<p>Required Height: <%=@attraction.min_height%></p>
<p>Nausea Rating: <%=@attraction.nausea_rating%></p>
<p>Happiness Rating: <%=@attraction.happiness_rating%></p>

<%= link_to 'Edit Attraction', [:edit, @attraction] %></p>

<%= form_for @ride do |f| %>
<%=f.submit 'Go on this ride'%>
<%= f.hidden_field :attraction_id, :value => @attraction.id %>
<%= f.hidden_field :user_id, :value => @user.id %>
<%end%>
