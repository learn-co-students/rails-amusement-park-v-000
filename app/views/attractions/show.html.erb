<h1><%= @attraction.name %></h1>

  <h5>Ticket Requirement: <%= @attraction.tickets %></h5>
  <h5>Height Requirement:: <%= @attraction.min_height %></h5>
  <h5>Nausea Rating: <%= @attraction.nausea_rating %></h5>
  <h5>Happiness Rating: <%= @attraction.happiness_rating %></h5>


<% if !current_user.admin %>
  <%= button_to "Go on this ride", rides_create_path, params:{user_id: session[:user_id], attraction_id: @attraction.id}, class: "btn btn-primary" %>
<% else   %>
  <%= link_to "Edit Attraction", edit_attraction_path %>
<% end %>
