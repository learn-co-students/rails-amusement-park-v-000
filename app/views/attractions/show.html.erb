<h1><%= @attraction.name %></h1>
<p>Tickets: <%= @attraction.tickets %></p><br>
<p>Minimum Height: <%= @attraction.min_height %></p><br>
<p>Happiness: <%= @attraction.happiness_rating %></p><br>
<p>Nausea: <%= @attraction.nausea_rating %></p><br>
<form action="/rides" method="post">
  <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>

  <% byebug %>
  <%= tag(:input, :type => "hidden", :name => :attraction_id, :value => @attraction.id) %>

  <input type="submit" value="Go on this ride"</input>
  </form>
