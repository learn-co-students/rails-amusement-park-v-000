<p>Name: <%= @attraction.name %></p>
<p>Total Number of Users: <%= @attraction.users %></p>
<p>Ticket Requirement: <%= @attraction.tickets %></p>
<p>Height Requirement: <%= @attraction.min_height %></p>
<p>Nausea Rating: <%= @attraction.nausea_rating %></p>
<p>Happiness Rating: <%= @attraction.happiness_rating %></p>
<br>


<% if User.find(session[:user_id]).admin? %>
  <%= link_to("Edit Attraction", edit_attraction_path)%>
<% else %>
  <%= form_for(@ride) do |f| %>
    <%= f.submit "Go on this ride"%>
    <%= f.hidden_field :attraction_id, :value => @attraction.id %>
    <%= f.hidden_field :user_id, :value => session[:user_id] %>
  <% end %>

<% end %>
