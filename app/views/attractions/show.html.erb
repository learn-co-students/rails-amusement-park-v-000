<p id="notice"></p>

<div class="center">
  <div class="info">
    <p>
      <strong>Name: </strong>
      <%= @attraction.name %>
    </p>

    <p>
      <strong>Total Number of Users: </strong>
      <%= @attraction.users.size %>
    </p>

    <p>
      <strong>Ticket Requirement: </strong>
      <%= @attraction.tickets %>
    </p>

    <p>
      <strong>Height Requirement</strong>
      <%= @attraction.min_height %>
    </p>

    <p>
      <strong>Nausea Rating</strong>
      <%= @attraction.nausea_rating %>
    </p>

    <p>
      <strong>Happiness Rating</strong>
      <%= @attraction.happiness_rating %>
    </p>

    <% if current_user.admin %>
      <p><%= link_to "Edit Attraction", edit_attraction_path %></p>
    <% else %>
      <%= form_for @ride, url: url_for(controller: 'rides', action: 'create'), method: :POST do |f| %>
        <%= f.hidden_field :attraction_id, value: @attraction.id %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.submit "Go on this ride" %>
      <% end %>
    <% end %>
  </div>
</div>
