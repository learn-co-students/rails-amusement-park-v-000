

<h1><%= @attraction.name %></h1>

<h3>Tickets Required: <%= @attraction.tickets %></h3>
<h3>Minimum Height Required: <%= @attraction.min_height %></h3>

<% if @user.admin %>
  <h3><%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% else %>
  <h3><%= button_to "Go on this ride", rides_path(id: @attraction.id) %></h3>
<% end %>
