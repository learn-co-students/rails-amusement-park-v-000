
<%= @ride.name %>
<% if current_user.admin == false %>
<ul>
  <li>Ticket Cost: <%= @ride.tickets %></li>
  <li>Height Requirement: <%= @ride.min_height %> </li>
</ul>
<%= button_to "Go on this ride".html_safe, take_ride_path, :method => :post, class: "btn btn-primary" %>
<% end %>

<% if current_user.admin == true %>
<%= link_to "Edit Attraction", edit_attraction_path(@ride) %>
<% end %>
