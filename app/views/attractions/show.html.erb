<p>
    <strong>Name: </strong>
    <%= @attraction.name %>
</p>
<p>
    <strong>Total Number of Users: </strong>
    <%= @attraction.users.count %>
</p>
<p>
    <strong>Ticket Requirement: </strong>
    <%= @attraction.tickets %>
</p>
<p>
    <strong>Nausea Rating: </strong>
    <%= @attraction.nausea_rating %>
</p>
<p>
    <strong>Happiness Rating: </strong>
    <%= @attraction.happiness_rating %>
</p>

<% if current_user.admin %>
    <%= link_to 'Edit Attraction', [:edit, @attraction] %>
<% else %>
    <%= form_for(@ride) do |f| %>
        <%= f.hidden_field :user_id %>
        <%= f.hidden_field :attraction_id %>
        <%= f.submit "Go on this ride", class:"btn brn-light" %>
        <% end %>
<% end %>