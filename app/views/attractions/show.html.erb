<h1>Attraction Show Page</h1>
<label>Attraction Name: </label> <%= @attraction.name %><br>
<label>Total Number of Users: </label> <%= @attraction.users.count %><br>
<label>Ticket Requirement: </label> <%= @attraction.tickets %><br>
<label>Height Requirement: </label> <%= @attraction.min_height %><br>
<label>Nausea Rating: </label> <%= @attraction.nausea_rating %><br>
<label>Happiness Rating: </label> <%= @attraction.happiness_rating %><br>
<% if !current_user.admin %>
    <%= form_for (Ride.new) do |f| %>
    <%= f.hidden_field :attraction, :value => @attraction.id %>
    <%= f.submit "Go on this ride" %>
    <% end %>
<% else %>
   <%= link_to "Edit Attraction", edit_attraction_path %>
 <% end %>