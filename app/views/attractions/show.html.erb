<h1>Attractions#show</h1>
<p>Find me in app/views/attractions/show.html.erb</p>
<p>Name: <%= @attraction.name %></p>
<p>Required Ticket Number: <%= @attraction.tickets %></p>
<p>Nausea Rating: <%= @attraction.nausea_rating %></p>
<p>Happiness Rating: <%= @attraction.happiness_rating %></p>
<p>Min Height: <%= @attraction.min_height %></p>
<br>

<% if current_user.admin %>
    <%= link_to "Edit Attraction", edit_attraction_path %>
<% else %>
    <%= form_tag(ride_path method: :post) do %>
        <%= hidden_field_tag(:user_id, current_user.id) %>
        <%= hidden_field_tag(:attraction_id, @attraction.id) %>
        <%= submit_tag "Go on this ride" %>
    <% end %>
<% end %>
