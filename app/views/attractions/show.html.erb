<div class="center info">

<h1><%= @attraction.name %></h1>

<p><strong>Users:</strong> <%= @attraction.users.count %></p>

<p><strong>Tickets:</strong> <%= @attraction.tickets %></p>

<p><strong>Height:</strong> <%= @attraction.min_height %></p>

<p><strong>Nausea Rating:</strong> <%= @attraction.nausea_rating %></p>

<p><strong>Happiness Rating:</strong> <%= @attraction.happiness_rating %></p>
</div>
<br><br><br>

<%= form_tag('/rides') do %>
	<%= hidden_field_tag 'ride[user_id', value=@user.id  %>
	<%= hidden_field_tag 'ride[attraction_id]',value=@attraction.id %>
	<%= submit_tag "Go on this ride" %>
	
<% end -%>

<% if @user.admin %>
	<%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% end %>