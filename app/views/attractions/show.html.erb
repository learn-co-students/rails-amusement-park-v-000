<% require 'pry' %>
<div class="center">
  <div class="info">

    <p><strong>Name:</strong> <%= @attraction.name %> </p>
    <p><strong>Total Number of Users:</strong>  </p>
    <p><strong>Ticket Requirement:</strong> <%= @attraction.tickets %></p>
    <p><strong>Height Requirement:</strong> <%= @attraction.min_height %> inches </p>
    <p><strong>Nausea Rating:</strong> <%= @attraction.nausea_rating %> </p>
    <p><strong>Happiness Rating:</strong> <%= @attraction.happiness_rating %> </p>
    <% if current_user.admin %>
      <%= link_to "Edit Attraction", edit_attraction_path(@attraction.id), class: "navbar-brand" %>
    <% else %>
      <%= form_for :ride, :url => {action: "create", controller: "rides"}, method: "POST" do |f| %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <%= f.hidden_field :attraction_id, :value => @attraction.id %>
        <%= f.submit "Go on this ride", class: "btn btn-light", 'disable_with' => "Go on this ride" %>
      <% end %>
    <% end %>
  </div>
</div>
