<%= @attraction.name %>
Ticket Requirement: <%= @attraction.tickets %><br>
Nausea Rating: <%= @attraction.nausea_rating %><br>
Happiness Rating: <%= @attraction.happiness_rating %><br>
Height Requirement: <%= @attraction.min_height %><br><br>

<% if current_user.admin %>
<%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>

<% else %>
<%= form_for @attraction, url: rides_path, method: :post do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :attraction_id, value: @attraction.id %>
  <%= f.submit "Go on this ride" %>
<% end %>
<% end %>
