
<div class="center">
  <div class="info">
    <p><strong>Name:</strong> <%= @attraction.name %></p>
    <p><strong>Total number of Users:</strong> <%= @attraction.users.count %></p>
    <p><strong>Ticket Requirement:</strong> <%= @attraction.tickets %></p>
    <p><strong>Height Rewuirement:</strong> <%= @attraction.min_height %> inches</p>
    <p><strong>Nausea Rating:</strong> <%= @attraction.nausea_rating %></p>
    <p><strong>Happiness Rating:</strong> <%= @attraction.happiness_rating %></p>
    <% if current_user.admin? %>
      <%= link_to "Edit Attraction", edit_attraction_path(@attraction), class: 'btn btn-light' %>
    <% else %>
      <%= form_tag({controller: 'users', action: 'update'}, method: 'patch') do %>
      <%= hidden_field_tag 'attraction[id]', @attraction.id %>
      <%= submit_tag "Go on this ride" %>
      <% end %>
    <% end %>
  </div>

</div>
