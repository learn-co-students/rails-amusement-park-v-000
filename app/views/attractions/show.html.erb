Attraction Name: <%= @attraction.name %><br>
Total Number of Users: <%= @attraction.users.count %><br>
Ticket Requirement: <%= @attraction.tickets %><br>
Height Requirement: <%= @attraction.min_height %> inches<br>
Nausea Rating: <%= @attraction.nausea_rating %><br>
Happiness Rating: <%= @attraction.happiness_rating %><br></br>

<% if current_user.admin %>
  <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% else %>
  <%= form_tag(rides_path) do %>
    <input type="hidden" name="ride[user_id]" value="<%=current_user.id%>">
    <input type="hidden" name="ride[attraction_id]" value="<%=@attraction.id%>">
    <input type="submit" value="Go on this ride">
  <% end %>
<% end %>
