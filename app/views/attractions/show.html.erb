<p id="notice"><%= notice %></p>
<h2><%= @attraction.name %></h2>
<%= form_tag rides_path do %>
	<%= hidden_field_tag :user_id, current_user.id %>
	<%= hidden_field_tag :attraction_id, @attraction.id %>
	<%= submit_tag "Go on this ride" %>
<% end %>
<%= link_to 'Edit Attraction', edit_attraction_path(@attraction) if current_user && current_user.admin?%> |
<%= link_to 'Back', attractions_path %>
