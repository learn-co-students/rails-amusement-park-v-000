<h1><%= @attraction.name %></h1>
<h5>Tickets Needed: <%= @attraction.tickets %></h5>
<% if @user.admin %>
	<%= link_to "Edit Attraction", edit_attraction_path %>
<% else %>
	<%= form_tag ({controller: 'attractions', action: 'go_on_ride', method: 'post'}) do %>
	  <%= hidden_field_tag 'id', @attraction.id %>
	  <%= submit_tag "Go on this ride" %>
	<% end %>
<% end %>