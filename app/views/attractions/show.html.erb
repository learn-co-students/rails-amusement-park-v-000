<h1><%= @attraction.name.titleize %> </h1>


<%= form_for @ride do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id  %> <br>
  <%= f.hidden_field :attraction_id, value: @attraction.id %> <br>
  <%= f.submit "Go on this ride" %> <br>
<% end %>

<% if current_user.admin %>
<%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% end %>
