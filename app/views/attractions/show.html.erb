<H1><%= @attraction.name %></p></H1>
   <p>Ticket Requirement: <%= @attraction.tickets %></p><br>
    <p>Height Requirement: <%= @attraction.min_height %> inches</p><br>
    <p>Nausea Rating: <%= @attraction.nausea_rating %></p><br>
    <p>Happiness Rating: <%= @attraction.happiness_rating %></p><br>
    
 <% if current_user.admin %>


<%= link_to 'Edit Attraction', edit_attraction_path(@attraction) %>

<% else %>

<%= form_tag("/rides", method: "post") do %>
 <%= hidden_field_tag :user_id %><br />
<%= hidden_field_tag :attraction_id %><br />
<div class="actions"><%= submit_tag 'Go on this ride', :class => 'btn btn-primary' %></div>

<% end %>
<% end %>
