
<%= form_for @ride do |f| %>

  <%= f.hidden_field :user_id, :value => @ride.user_id %>
  <%= f.hidden_field :attraction_id, :value => @ride.attraction_id %>

  <p>Name: <%= @attraction.name %></p>
  <p>Ticket Requirement: <%= @attraction.tickets %></p>

  <% if @user.admin %>

    <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
  <% else %>
    <%= f.submit "Go on this ride" %>
  <% end %>
<% end %>
