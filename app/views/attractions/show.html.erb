<div class="center">
  <div class="info">
    <p><strong>Name: </strong><%= @attraction.name %></p>
    <p><strong>Total Number of Users: </strong><%= @attraction.users.size %></p>
    <p><strong>Ticket Requirement: </strong><%= @attraction.tickets %></p>
    <p><strong>Height Requirement: </strong><%= @attraction.min_height %></p>
    <p><strong>Nausea Rating: </strong><%= @attraction.nausea_rating %></p>
    <p><strong>Happiness Rating: </strong><%= @attraction.happiness_rating %></p>
    <% if current_user.admin %>
      <p><a href="<%= edit_attraction_path(@attraction) %>">Edit Attraction</a></p>
    <% else %>
      <%= form_tag action="/rides" %>
      <%= hidden_field_tag :attraction_id, value=@attraction.id %>
      <%= hidden_field_tag :user_id, value=current_user.id %>
      <%= submit_tag "Go on this ride" %>
    <% end %>
  </div>
</div>
