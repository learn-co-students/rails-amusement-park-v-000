<h1><%=@attraction.name%></h1>

<h3>Min Height: <%=@attraction.min_height%></h3>
<h3>Nausea Rating: <%=@attraction.nausea_rating%></h3>
<h3>Ticket: <%=@attraction.tickets%></h3>

<div class="<%=for_admin%>">
  <%=link_to "Edit Attraction", edit_attraction_path%>
</div>

<div class="<%=for_user%>">
  <%=form_for @new_ride do |f|%>
    <%=f.hidden_field :user_id, value: "#{current_user.id}"%>
    <%=f.hidden_field :attraction_id, value:"#{@attraction.id}"%>
    <%=f.submit "Go on this ride"%>
  <%end%>
</div>
