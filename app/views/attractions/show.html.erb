<h1><%= @attraction.name %></h1>

<p>
<strong>Tickets:</strong> <%= @attraction.tickets %>
</p>

<p>
<strong>Nausea Rating:</strong> <%= @attraction.nausea_rating %>
</p>

<p>
<strong>Happiness Rating</strong> <%= @attraction.happiness_rating %>
</p>

<p>
<strong>Minimum Required Height:</strong> <%= @attraction.min_height%> inches
</p>

<% if current_user.admin == true %>
    <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>

    <%= button_to "Delete Attraction", attraction_path(@attraction), method: :delete, data: {confirm: "Are you sure?"} %>
<% else %>
    <%= form_for @ride do |f| %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :attraction_id, value: @attraction.id %>
        <%= f.submit "Go on this ride"%>
    <% end %>
<% end %>
<br>
<%= link_to "See all attractions", attractions_path %>