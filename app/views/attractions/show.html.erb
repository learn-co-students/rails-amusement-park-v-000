<h1>Name: <%= @attraction.name %></h1>
 <p>Tickets Required: <%= @attraction.tickets %></p>

  <% if admin? %>
   <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
 <% else %>
 <%= form_for @ride, :url => url_for(:controller => 'rides', :action => 'create') do |f| %>
     <%= f.hidden_field :user_id, :value => current_user.id %>
     <%= f.hidden_field :attraction_id, :value => @attraction.id %>
     <%= f.submit "Go on this ride" %>
   <% end %>
 <% end %>
