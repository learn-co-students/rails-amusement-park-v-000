<h3><%= @attraction.name %></h3><br>
Tickets: <%= @attraction.tickets %><br>
Nausea Rating: <%= @attraction.nausea_rating %><br>
Happiness Rating: <%= @attraction.happiness_rating %><br>
Minimum Height: <%= @attraction.min_height %><br><br>
<%= form_tag(rides_path) do %>
  <%= hidden_field_tag 'ride[attraction_id]', @attraction.id %>
  <%= submit_tag 'Go on this ride' %>
<% end %>
<% if current_user.admin %>
  <%= link_to 'Edit Attraction', edit_attraction_path(@attraction) %>
<% end %>
