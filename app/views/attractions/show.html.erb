<h1><%= @attraction.name %></h1>

<p><strong>Tickets: </strong> <%= @attraction.tickets %></p><br>
<p><strong>Nausea Rating: </strong> <%= @attraction.nausea_rating %></p><br>
<p><strong>Happiness Rating: </strong> <%= @attraction.happiness_rating %></p><br>
<p><strong>Minimum Height: </strong> <%= @attraction.min_height %></p><br>

<% if user_admin %>
  <%= link_to "Edit Attraction", edit_attraction_path %>
<% else %>
  <%= form_for @ride do |ride| %>
    <%= ride.hidden_field :user_id, :value => session[:user_id] %>
    <%= ride.hidden_field :attraction_id, :value=> @attraction.id %>
    <%= ride.submit "Go on this ride" %>
  <% end %>
<% end %>
