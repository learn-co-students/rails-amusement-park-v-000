<strong>Name:</strong> <%= @attraction.name %></p>
<strong>Total Number of Users:</strong> <%= @attraction.users.count %></p>
<strong>Ticket Requirement:</strong> <%= @attraction.tickets %></p>
<strong>Height Requirement:</strong> <%= @attraction.min_height %> inches</p>
<strong>Nausea Rating:</strong> <%= @attraction.nausea_rating %></p>
<strong>Happiness Rating:</strong> <%= @attraction.happiness_rating %></p>

<% if current_user.admin %>
      <%= link_to 'Edit Attraction', [:edit, @attraction] %></p>
    <% else %>
      <%= form_for @ride do |f| %>
        <%= f.hidden_field :user_id %><br />
        <%= f.hidden_field :attraction_id %><br />
        <%= f.submit "Go on this ride", class:"btn btn-light" %>
      <% end %>
    <% end %>