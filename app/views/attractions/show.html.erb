<h1>Show an attraction: <%= @attraction.name %> </h1>

<p>Attraction Name: <%= @attraction.name %> </p>
<p>Attraction Min Height: <%= @attraction.min_height %> </p>
<p>Attraction Tickets: <%= @attraction.tickets %> </p>
<p>Attraction Happiness: <%= @attraction.nausea_rating %> </p>
<p>Attraction Nausea: <%= @attraction.happiness_rating %> </p>
<br>
<% if current_user.admin %>
    <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% else %>
    <%= form_tag("/rides", method: "post") do %>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :attraction_id, @attraction.id %>
        <%= button_tag "Go on this ride" %>    
    <% end %>
<% end %>


