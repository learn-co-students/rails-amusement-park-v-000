<h1>Name: <%= @attraction.name %></h1>
<h3>Tickets: <%= @attraction.tickets %></h3>
<h3>Nausea: <%= @attraction.nausea_rating %></h3>
<h3>Happiness: <%= @attraction.happiness_rating %></h3>
<h3>Minimum Height: <%= @attraction.min_height %></h3>


<%= button_to 'Go on this ride', {:controller => "users", :action => "update", :attraction_id => @attraction.id} , :method=>:patch %>

<% if current_user.admin == true %>
    <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% end %>