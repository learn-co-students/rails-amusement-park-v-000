<h1><%= @attraction.name %></h1>
<% if current_user.admin %>
  <p><%= link_to "Edit Attraction", edit_attraction_path %></p>
<% else %>
    <%= form_tag ride_path, method: :post, authenticity_token: true do %>
      <%= hidden_field_tag "attraction", "#{@attraction.id}" %>
      <%= submit_tag "Go on this ride"%>
    <% end %>
<% end %>