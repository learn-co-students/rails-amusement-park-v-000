<div class='center'>
    <div class='info'>
        <p><strong>Name:</strong> <%= @attraction.name %></p>
        <p><strong>Total Number of Users:</strong> <%= @attraction.rides.count  %></p>
        <p><strong>Ticket Requirement:</strong> <%= @attraction.tickets  %></p>
        <p><strong>Height Requirement:</strong> <%= @attraction.min_height %></p>
        <p><strong>Nausea Rating:</strong> <%= @attraction.nausea_rating  %></p>
        <p><strong>Happiness Rating:</strong> <%= @attraction.happiness_rating  %></p><br>
        <% if current_user.is_admin? %>
            <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
        <% else %>
            <%= form_tag attraction_rides_path(@attraction) do %>
                <%= hidden_field_tag :attraction_id, value: @attraction.id %>
                <%= hidden_field_tag :user_id, current_user.id %>
                <%= submit_tag "Go on this ride" %>
            <% end %>
        <% end %>
    </div>
</div> 
