  <ul>
    <li><strong>Name: </strong><%= @attraction.name %></li>
    <li><strong>Total Number of Users: </strong><%= @attraction.rides.size%></li>
    <li><strong>Ticket Requirement: </strong> <%= @attraction.tickets %></li>
    <li><strong>Height Requirement: </strong> <%= @attraction.min_height %> inches</li>
    <li><strong>Nausea Rating: </strong> <%= @attraction.nausea_rating %></li>
    <li><strong>Happiness Rating: </strong> <%= @attraction.happiness_rating %></li>
  </ul>

<% if current_user.admin %>
  <p><%= link_to "Edit Attraction", edit_attraction_path %><p>
<% else %>
  <form action="/rides/new" method="post">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <input name="user_id" type="hidden" value="<%= current_user.id %>"> <input name="attraction_id" type="hidden" value="<%= @attraction.id %>">
    <input type="submit" value="Go on this ride">
  </form>
<% end %>
