<h1>New attraction</h1>

    <%= form_for @attraction do |f| %>

      <%= f.label :name %><br>
      <%= f.text_field :name, class: 'form-control' %></br></br>

      <%= f.label :height %> <strong>Requirement </strong>(in inches)<br>
      <%= f.number_field :min_height, class: 'form-control' %></br></br>

      <label>How fun is it?</label> (1-5 scale)<br>
      <%= f.number_field :happiness_rating, class: 'form-control' %></br></br>

      <label>How nausea-inducing is it?</label> (1-5 scale)<br>
      <%= f.number_field :nausea_rating, class: 'form-control' %></br></br>

      <label>How many tickets does it cost?</label><br>
      <%= f.number_field :tickets, class: 'form-control' %></br></br>

      <%= f.submit "Create Attraction" %>
    <% end %>