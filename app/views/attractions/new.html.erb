<div class="container" role="main">
    <h1>New attraction</h1>

    <form class="new_attraction">
        <div class="form-group">
            <%= form_for @attraction do |f|%>

                <%= f.label :name %><br>
                <%= f.text_field :name, class: 'form-control'%></br>

                <%= f.label :height %>Requirement (in inches)<br>
                <%= f.number_field :min_height, class: 'form-control'%></br>

                <label>How fun is it? (1-5 scale)</label><br>
                <%= f.number_field :happiness_rating, class: 'form-control'%></br>

                <label>How nausea-inducing is it? (1-5 scale)</label><br>
                <%= f.number_field :nausea_rating, class: 'form-control'%></br>

                <label>How many tickets does it cost?</label><br>
                <%= f.number_field :tickets, class: 'form-control'%></br>

                <div class="actions">
                    <%= f.submit "Create Attraction", class: "btn btn-primary" %>
                </div>

            <% end %>
        </div>
    </form>

</div>