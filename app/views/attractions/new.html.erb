
<h1>New Attraction</h1>

<%= form_for @attraction, url: {action: 'create'} do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :height, "Height (in inches)" %>
    <%= f.text_field :min_height, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :happiness, "How fun is it? (1-5 scale)" %>
    <%= f.text_field :happiness_rating, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :nausea, "How nausea-inducing is it? (1-5 scale)" %>
    <%= f.text_field :nausea_rating, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :tickets, "How many tickets does it cost?" %>
    <%= f.text_field :tickets, class: 'form-control' %>
  </div>
  <%= f.submit "Create Attraction", class: 'btn btn-primary' %>

<% end %>
