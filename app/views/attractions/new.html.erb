<h2>New Attraction</h2>

<%= form_for(@attraction) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label "Height Requirement (in inches)" %>
  <%= f.number_field :min_height, class: "form-control" %>

  <%= f.label "How fun is it? (1-5 sclae)" %>
  <%= f.number_field :happiness_rating, class: "form-control" %>

  <%= f.label "How nausea-inducing is it? (1-5 scale)" %>
  <%= f.number_field :nausea_rating, class: "form-control" %>

  <%= f.label "How many tickets does it cost?" %>
  <%= f.number_field :tickets, class: "form-control" %>

  <br>
  <%= f.submit "Create Attraction", class: "btn btn-primary" %>
<% end %>
