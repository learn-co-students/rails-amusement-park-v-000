<%= form_for @attraction do |f| %>

  <%= f.label :name, 'Name' %><br>
  <%= f.text_field :name %><br>

  <%= f.label :tickets, 'Tickets' %><br>
  <%= f.number_field :tickets %><br>

  <%= f.label :nausea_rating, 'Nausea (1-5 scale)' %><br>
  <%= f.number_field :nausea_rating %><br>

  <%= f.label :happiness_rating, 'Happiness (1-5 scale)' %><br>
  <%= f.number_field :happiness_rating %><br>

  <%= f.label :min_height, 'Height (inches)' %><br>
  <%= f.number_field :min_height %><br>

  <%= f.submit %>

<% end %>
