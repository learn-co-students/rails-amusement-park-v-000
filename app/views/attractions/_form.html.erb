
<%= form_for @attraction do |f| %>

<%= f.label :name %><br>
<%= f.text_field :name %> <br> <br>

<%= f.label :min_height,'Min Height (in inches)'  %> <br>
<%= f.number_field :min_height %><br><br>

<%= f.label :happiness_rating %> <%= '(1 - 5 scale)' %> <br>
<%= f.number_field :happiness_rating %><br><br>

<%= f.label :nausea_rating %> <%= '(1 - 5 scale)' %> <br>
<%= f.number_field :nausea_rating %><br><br>

<%= f.label :tickets %> <%= 'Required number of tickets' %> <br>
<%= f.number_field :tickets %><br><br>

<%= f.submit %>
<% end %>
