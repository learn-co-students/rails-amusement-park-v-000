<%= form_for(@attraction) do |f| %>
  <%= f.label :name, "Name:" %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :min_height, "Minimum Height Required:" %>
  <%= f.text_field :min_height %>
  <br>
  <%= f.label :happiness_rating, "Happiness Rating:" %>
  <%= f.text_field :happiness_rating %>
  <br>
  <%= f.label :nausea_rating, "Nausea Rating:" %>
  <%= f.text_field :nausea_rating %>
  <br>
  <%= f.label :tickets, "How many tickets do they need to ride?" %>
  <%= f.text_field :tickets %>
  <br>
  <%= f.submit  %>
<% end %>
