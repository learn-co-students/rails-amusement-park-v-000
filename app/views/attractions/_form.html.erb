<%= form_for @attraction do |f| %>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :happiness_rating, "Happiness Rating" %>
		<%= f.number_field :happiness_rating, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :tickets %>
		<%= f.text_field :tickets, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :min_height, "Minimum Height" %>
		<%= f.text_field :min_height, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :nausea_rating, "Nausea Rating" %>
		<%= f.text_field :nausea_rating, class: 'form-control' %>
	</div>
	<br>
	<div class="form-group">
		<%= f.submit class: "btn btn-primary" %>
	</div>
<% end %>