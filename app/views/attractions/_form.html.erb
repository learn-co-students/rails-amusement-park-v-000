<%= form_for(@attraction) do |f| %>

  <div class="field"> <%= f.label :name %><br>
  <%= f.text_field :name %></div>
  <div class="field"><%= f.label :min_height, value = "Height Requirement (in inches)" %><br>
  <%= f.text_field :min_height %></div>
  <div class="field"><%= f.label :happiness_rating, value = "How fun is it? (1-5 scale)" %><br>
  <%= f.text_field :happiness_rating %></div>
  <div class="field"><%= f.label :nausea_rating, value = "How nausea-inducing is it? (1-5 scale)" %><br>
  <%= f.text_field :nausea_rating %></div>
  <div class="field"><%= f.label :tickets, value = "How many tickets does it cost?" %><br>
  <%= f.text_field :tickets %></div>
  <br>

  <div class="actions"><%= f.submit 'Submit', :class => 'btn btn-primary' %></div>

<% end %>
