<%= form_for(@attraction) do |f| %>

<div class="form-table">
  <%= f.label :name %><br>
  <%= f.text_field :name, class: "form-control"%></div>

<div class="form-table">
  <%= f.label :min_height, "Height Requirement(in inches)" %><br>
  <%= f.text_field :min_height, class: "form-control"%></div>

<div class="form-table">
  <%= f.label :happiness_rating, "How fun is it? (1-5 scale)" %><br>
  <%= f.text_field :happiness_rating, class: "form-control"%></div>

<div class="form-table">
  <%= f.label :nausea_rating, "How nausea-inducing is it?(1-5 scale)"%><br>
  <%= f.text_field :nausea_rating, class: "form-control"%></div>

<div class="form-table">
  <%= f.label :tickets, "How many tickets does it cost?"%><br>
  <%= f.text_field :tickets, class: "form-control"%></div>

<div class="actions">
  <%= f.submit class: "btn btn-primary" %>
</div>
<% end %>
