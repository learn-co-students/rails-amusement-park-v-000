<%= form_for(@attraction) do |f| %>

  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :min_height, "Height Requirement (in inches)" %><br>
  <%= f.text_field :min_height %><br>

  <%= f.label :happiness_rating, "How fun is it? (1-5)" %><br>
  <%= f.text_field :happiness_rating %><br>

  <%= f.label :nausea_rating, "How nauseating is it? (1-5)"%><br>
  <%= f.text_field :nausea_rating %><br>

  <%= f.label :tickets, "How many tickets does it require?"%><br>
  <%= f.text_field :tickets%><br>

  <%= f.submit %>

  <%end%>
