<% if @attraction.errors.any? %>
  <ul>
  <% @attraction.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @attraction do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <br>
  <%= f.label :min_height, "Height Requirement (in inches)" %><br>
  <%= f.text_field :min_height %><br>
  <br>
  <%= f.label :happiness_rating, "How fun is it? (1-5 scale)" %><br>
  <%= f.text_field :happiness_rating %><br>
  <br>
  <%= f.label :nausea_rating, "How nausea-inducing is it? (1-5 scale)" %><br>
  <%= f.text_field :nausea_rating %><br>
  <br>
  <%= f.label :tickets, "How many tickets does it cost?" %><br>
  <%= f.text_field :tickets %><br>
  <br>
  <%= f.submit %>
<% end %>
