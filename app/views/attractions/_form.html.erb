<%= form_for attraction, :html => {:class => "new_attraction", :id => "new_attraction"} do |f| %>
  <%= f.label "Name" %><br>
  <%= f.text_field :name, :class => "form-control" %><br>
  <%= f.label "Height Requirement (in inches)" %><br>
  <%= f.number_field :min_height, :class => "form-control" %><br>
  <%= f.label "How fun is it? (1-5 scale)" %><br>
  <%= f.number_field :happiness_rating, :class => "form-control" %><br>
  <%= f.label "How nausea-inducing is it? (1-5 scale)" %><br>
  <%= f.number_field :nausea_rating, :class => "form-control" %><br>
  <%= f.label "How many tickets does it cost?" %><br>
  <%= f.number_field :tickets, :class => "form-control" %><br>

  <%= f.submit :class=> "btn btn-primary" %>
  <% end %>
