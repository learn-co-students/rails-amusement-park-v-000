

<%= form_for (attraction) do |f| %>
    <div class="field">
        <label>Name</label><br>
        <%= f.text_field :name %>
    </div>

    <div class="field">
        <label>Height Requirement (in inches)</label><br>
        <%= f.text_field :min_height %>
    </div>

    <div class="field">
        <label>How fun is it? (1-5 scale)</label><br>
        <%= f.text_field :happiness_rating %>
    </div>

    <div class="field">
        <label>How nausea-indusing is it? (1-5 scale)</label><br>
        <%= f.text_field :nausea_rating %>
    </div>

    <div class="field">
        <label>How many tickets does it cost?</label><br>
        <%= f.text_field :tickets %>
    </div>

    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>
