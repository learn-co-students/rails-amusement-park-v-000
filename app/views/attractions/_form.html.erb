<%= form_for @attraction do |f| %>
  <%= f.hidden_field :id %>
  <%= f.label "Name" %>
  <br>
  <%= f.text_field :name %>
  <br>
  <%= f.label "Height Requirement (in inches)" %>
  <br>
  <%= f.number_field :min_height %>
  <br>
  <%= f.label "How fun is it? (1-5 scale)" %>
  <br>
  <%= f.number_field :happiness_rating %>
  <br>
  <%= f.label "How nausea-inducing is it? (1-5 scale)" %>
  <br>
  <%= f.number_field :nausea_rating %>
  <br>
  <%= f.label "How many tickets do it cost?" %>
  <br>
  <%= f.number_field :tickets %>
  <br>
  <br>
  <%= f.submit %>
<% end %>