<div class="container" role="manin">
  <div class="new_form">
    <%= form_for @attraction do |f| %>
      <div class="form-group">
        <label>Name</label><br>
        <%= f.text_field :name %><br>
      </div>

      <div class="form-group">
        <label>Ticket Requirement</label><br>
        <%= f.text_field :tickets %><br>
      </div>

      <div class="form-group">
        <label>Height Requirement</label><br>
        <%= f.text_field :min_height%><br>
      </div>

      <div class="form-group">
        <label>Happiness Rating (1-5 scale)</label><br>
        <%= f.text_field :happiness_rating %><br>
      </div>

      <div class="form-group">
        <label>Nausea Rating (1-5 scale)</label><br>
        <%= f.text_field :nausea_rating %><br>
      </div>

      <%= f.submit %>
    <% end %>

</div>
