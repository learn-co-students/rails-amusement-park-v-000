<%= form_for @attraction do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :min_height, "Min Height Requirement" %>
    <%= f.number_field :min_height %><br>

    <%= f.label :happiness_rating, "How fun is it on a scale of 1 -5 " %>
    <%= f.number_field :happiness_rating %><br>

    <%= f.label :nausea_rating, "How naueseating is it?" %>
    <%= f.number_field :nausea_rating %><br>

    <%= f.label :tickts, "How many tickets does it cost?" %>
    <%= f.number_field :tickets %><br>

    <%= f.submit %>

    <% end %>