

<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control", placeholder: "Please enter a name" %>
</div>

<div class="form-group">
  <%= f.label :min_height %> (in inches)
  <%= f.number_field :min_height, class: "form-control", placeholder: "Please enter a minimum height" %>
</div>

<div class="form-group">
  <%= f.label :happiness_rating %> (1-5 scale)
  <%= f.number_field :happiness_rating, class: "form-control", min: "1", max: "5", placeholder: "Please enter a happiness rating" %>
</div>

<div class="form-group">
  <%= f.label :nausea_rating %> (1-5 scale)
  <%= f.number_field :nausea_rating, class: "form-control", min: "1", max: "5", placeholder: "Please enter a nausea rating" %>
</div>

<div class="form-group">
  <%= f.label :tickets %>
  <%= f.number_field :tickets, class: "form-control", placeholder: "Please enter number of tickets" %>
</div>

<div class="form-group mt-3">
  <%= f.submit submit_text, class: "btn btn-primary" %>
</div>
