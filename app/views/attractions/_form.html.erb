<%= form_for(@attraction) do |f| %>
  <p><%= f.label :name %><br>
    <%= f.text_field :name %><br>
  </p><br>
  
  <p><%= f.label :min_height, "Height Requirement (in inches)" %><br>
    <%= f.number_field :min_height %><br>
  </p><br>

  <p><%= f.label :happiness_rating, "How fun is it? (1-5 scale)" %><br>
    <%= f.number_field :happiness_rating %><br>
  </p><br>

  <p><%= f.label :nausea_rating, "How nausea-inducing is it? (1-5 scale)" %><br>
    <%= f.number_field :nausea_rating %><br>
  </p><br>

  <p><%= f.label :tickets, "How many tickets does it cost?" %><br>
    <%= f.number_field :tickets %><br>
  </p><br>

  <%= f.submit %>
<% end %>