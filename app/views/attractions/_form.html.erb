<%= form_for(@attraction) do |f| %>
  <%= f.label :name, "Name" %><br>
  <%= f.text_field :name %>

  <%= f.label :min_height, "Required Height" %><br>
  <%= f.number_field :min_height %>

  <%= f.label :happiness_rating, "How fun is it? (1-5 scale)" %><br>
  <%= f.number_field :happiness_rating %>

  <%= f.label :nausea_rating, "How much nausea is it? (1-5 scale) blegh" %><br>
  <%= f.number_field :nausea_rating %>

  <%= f.label :tickets, "How many tickets you got mang?" %><br>
  <%= f.number_field :tickets %>

  <%= f.submit %>
<% end %>
