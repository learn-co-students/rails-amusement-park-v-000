<%= form_for(@attraction) do |f| %>

  <div class='form-group'>
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :min_height, 'Height requirement in inches' %><br>
    <%= f.number_field :min_height, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :happiness_rating, 'How fun is it on the scale 1-5?' %><br>
    <%= f.number_field :happiness_rating, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :nausea_rating, 'How nausea-inducing is it on the scale 1-5?' %><br>
    <%= f.number_field :nausea_rating, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :tickets, 'How many tickets does it cost?' %><br>
    <%= f.number_field :tickets, class: 'form-control' %>
  </div>

  <div class='actions'>
    <%= f.submit class: 'btn btn-primary' %>
  </div>

<% end %>
