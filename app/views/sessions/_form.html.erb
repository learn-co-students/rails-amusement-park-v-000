<%= form_tag url: '/signin', method: :post do %>

  <% @users.each do |user| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from logging in:</h2>

        <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>

  <div class="field">
    <%= label_tag :name %>
    <%= select_tag(:user_name, options_from_collection_for_select(@users, "id", "name")) %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <br><%= submit_tag 'Sign In' %>
  </div>
<% end %>
