 <%= form_tag("/login", method: "post") do %>
 	<div class="form-group">
 		<%= label_tag "Name:" %>	
	    <%= select_tag "user_name", options_from_collection_for_select(User.all, "name", "name"), prompt: "Please select your name from the list", class: "form-control" %>
 	</div>
 	<div class="form-group">
 		<%= label_tag "Password:" %>
 		<br>
 		<%= password_field_tag 'password', nil, class: 'form-control' %>
 	</div>
 	<br>
	<%= submit_tag "Sign In", class: "btn btn-primary btn-lg btn-block" %>
  <% end %>
