<%= form_tag '/sessions' do %>
    <div class="form-group">
        <p><strong>Your name:</strong> <%= collection_select( :user, :name, User.all, :name, :name, prompt: "Please select your username from this dropdown" ) %></p>
    </div>
    
    <div class="form-group">
        <strong>Your password:</strong><br>
        <%= password_field_tag "password", :password, class: "form-control" %>
    </div>
    
    <div class="actions">
        <p><%= submit_tag "Sign In" %></p>
    </div>
<% end %>