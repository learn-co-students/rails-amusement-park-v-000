
<%= flash[:notice] if flash[:notice] %>

<h1>Login:</h1><br>
<%= form_tag(sessions_path) do %>
  <%= label_tag "user_name", "Your name: " %>
  <%= collection_select(:user, :name, User.all, :name, :name) %><br>
  <%= label_tag "password", "Your password: " %>
  <%= password_field_tag :password%><br><br>
  <%= submit_tag "Sign In" %>
<% end %>
