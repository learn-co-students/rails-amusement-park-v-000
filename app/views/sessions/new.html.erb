<%= form_tag(sessions_path) do %>
    <div>
        <%= label_tag :name %><br/>
        <%= collection_select(:user, :name, User.all, :name, :name) %>
    </div>
    <div>
        <%= label_tag :password %><br/>
        <%= password_field_tag :password %>
    </div>

    <%= submit_tag "Sign In" %>
<% end %>