<font color= "green"><h1>Sign In! </h1></font>

<%= form_tag(signin_path, method: "post") do %>
  <p>Your name: <%= collection_select("user", "name", User.all, :name, :name, prompt: 'Please select your username from this dropdown') %></p>
  <p>Your password: <%= password_field_tag :password %></p>
  <br>
  <%= submit_tag "Sign In" %>
<% end %>
