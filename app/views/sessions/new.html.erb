<%= form_for @user, url: sessions_path do |f| %>

  <%= f.label :name, "Select your name" %><br>
    <%= f.collection_select :name, User.all, :name, :name %><br>

  <%= f.label :password, "Enter your password" %><br>
    <%= f.password_field :password %><br>

    <%= f.submit "Sign In" %>
  
<% end %>