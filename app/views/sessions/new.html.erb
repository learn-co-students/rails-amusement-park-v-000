<div class="row mt-5">
  <div class="col">
    <h3>Sign In</h3>
  </div>
</div>

<div class="row">
  <div class="col">
    <hr>
  </div>
</div>

<div class="row mt-3">
  <div class="col">
    <%= form_tag(sessions_path) do %>
      <div class="form-group">
        <%= label_tag "Name" %>
        <%= select_tag :user_name, options_for_select(@users.collect{ |u| [u.name, u.name] }, params[:name]) %>
      </div>
      <div class="form-group">
        <%= label_tag "Password" %>
        <%= password_field_tag :password, params[:password], class: "form-control", placeholder: "Please enter a password" %>
      </div>
      <div class="form-group">
        <%= submit_tag "Sign In", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col">
    <hr>
  </div>
</div>
