<%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>

  <div class="field">
    <%= f.label :name, "Select your name" %><br>
    <%= f.text_field :name %><br>
    <!-- <%#= f.collection_select :name, @users, :id, :name, {:include_blank => ""} %><br><br> -->
  </div>

  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </div>

  <div class="actions">
    <%= f.submit "Sign In" %>
  </div>
<% end %>
