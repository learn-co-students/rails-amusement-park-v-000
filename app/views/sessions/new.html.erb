<h1>Login</h1>
<%= form_tag('/sessions', :method => 'POST') do %>
  <%= label_tag(:name) %>
  <%= select_tag :name, options_from_collection_for_select(User.all, "name", "name"), :id => "user_name" %><br />
  <%= label_tag(:password) %>
  <%= password_field_tag(:password) %><br />
  <%= submit_tag("Sign In") %>
<% end %>
