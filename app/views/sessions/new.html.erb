<%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>

    <div class="form-group">
      <%= f.label :name, "Select your name" %><br>
      <%= f.select :name, options_from_collection_for_select(User.all, "name", "name"), include_blank: true %>

      </div>
  
    <div class="form-group">
      <%= f.label :password, "Enter your password" %><br>
      <%= f.password_field :password, class: "form-control" %>
    </div>
  
    <div class="actions">
      <%= f.submit "Sign In", class: "btn btn-primary" %>
    </div>
  <% end %>
  