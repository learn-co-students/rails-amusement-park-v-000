<h1>Welcome to new sessions</h1>

<%= form_tag ({controller: 'sessions', action: 'create', method: 'post'}) do %>
  <%= label_tag(:name, "Your name:") %>
  <%= collection_select(:user, :name, @users, :name, :name, {prompt: 'Please select your username from this dropdown'}) %></br>

  <%= label_tag(:password, "Your password:") %></br>
  <%= password_field_tag(:password) %></br>

  <input type=submit value='Sign In' >
<% end %>
