<%= form_tag(sessions_path) do %>

  <div class="form-group">
    <%= label_tag "Your name" %>
  	<%= collection_select(:user, :name, @users, :id, :name, {:prompt => 'Please select the author of this post'})%>
  </div>

  <div class="form-group">
    <%= label_tag :password, "Your password" %><br>
    <%= password_field_tag 'password', nil, class: 'form-control' %>
  </div>

  <div class="actions">
  	<%= submit_tag "Sign In"%>
  </div>

<% end %>




