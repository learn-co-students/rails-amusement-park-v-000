<%= form_tag('/session') do %>
    <%= label_tag :name, "Your name:" %>
    <%= collection_select :user, :name, User.all, :name, :name, prompt: "Please select your name from this dropdown" %>
    <br>
    <%= label_tag :password, "Your password:" %>
    <%= password_field_tag :password %>
    <br>
    <%= submit_tag "Sign In" %>
<% end %>
