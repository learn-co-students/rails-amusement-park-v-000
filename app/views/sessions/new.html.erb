<%= form_for @user, url: url_for(controller: 'sessions', action: 'create') do |f| %>
  <%= f.label :name, "Your name: " %>
  <%= f.collection_select(:name, @users, :id, :name) %><br>

  <%= f.label :password, "Your password:" %><br>
  <%= f.password_field :password %><br>

  <%= f.submit "Sign In" %>
<% end %>
