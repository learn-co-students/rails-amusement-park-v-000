<%= form_for @user, url: '/sessions/create' do |f| %>
  Your name: <%= f.label :name, "Please select your username from this dropdown" %>
  <%= f.collection_select(:name, @users, :name, :name) %>

  <%= f.label :password, "Your password:" %><br>
  <%= f.password_field :password %>

  <%= f.submit "Sign In" %>
<% end %>
