<h3>Sign in </h3>

<%= form_for User.new, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>

  <%= text_field_tag :user_name %><br>

  <%= password_field_tag :password %><br>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  
  <%= submit_tag "Sign In" %>
<% end %>
 