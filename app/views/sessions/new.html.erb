<%= form_tag(sessions_path) do %>
  <div class="form-group">
    <%= label_tag :name, "Your name:" %>
    <%= collection_select :user, :name, User.all, :name, :name, { include_blank: "Please select your username from this dropdown" } %>
  </div>
  <div class="form-group">
    <%= label_tag :password, "Your password: " %><br />
    <%= password_field_tag :password, class: 'form-control' %>
  
  </div>

  <div class='actions'>
  </div>
<% end %>
