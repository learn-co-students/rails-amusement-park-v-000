<%= form_for @user, :url => url_for(controller: "sessions", action: "create") do |f| %>

<div class="form-group">
  <%= f.label :name, 'Your name:' %><br>
  <%= f.collection_select :name, User.all, :id, :name, include_blank: 'Please select your username from this dropdown' %>
</div>

<div class="form-group">
  <%= f.label :password, "Your password:" %><br>
  <%= f.password_field :password, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.submit "Sign In", class: "btn btn-primary" %>
</div>

<% end %>
