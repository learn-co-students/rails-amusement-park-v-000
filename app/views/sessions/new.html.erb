<%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>

  <div class="form-group">
    <%= f.label :user_name, "Select your name" %><br>
    <%= f.collection_select(:id, @users, :id, :name, class: "form-control") %>
  </div>

 <div class="form-group">
    <%= f.label :password, "Enter your password" %><br>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign In"  %>
  </div>
<% end %>
