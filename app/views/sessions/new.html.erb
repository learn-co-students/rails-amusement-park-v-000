
<%= form_tag signin_path do %>
  <div class="form-group">
    <p><strong>Your name:</strong> <%= collection_select(:user, :name, @users, :name, :name, prompt: "Please select your username from this dropdown" ) %></p
  </div>
  <div class="form-group">
    <label>Your Password:</label><br>
    <%= text_field_tag 'password', "", class: 'form-control' %>
  </div>

  <%= submit_tag "Sign In" %>

<% end %>
