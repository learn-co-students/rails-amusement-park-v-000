<!-- log in page -->
<h2>Log In</h2>
<br>
<%= form_tag('/signin', method: :post) do %>
  <div class ="form-group">
  <%= label_tag 'Your Name: ' %>
  <%= select_tag "user_name", options_from_collection_for_select(@users, :id, :name), prompt: "Please select your username from this dropdown" %><br />
  </div>

  <div class ="form-group">
  <%= label_tag 'password: ' %>
  <%= password_field_tag :password, nil, class:'form-control' %><br />
  </div>

  <%= submit_tag 'Sign In' %>
<% end %>
