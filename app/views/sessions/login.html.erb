<h1>Login</h1>

<%= form_tag(login_path) do %>
    <%= label_tag :'Your Name'%>
    <%= select_tag :'user[id]', options_from_collection_for_select(@users, :id, :name), prompt: "Choose your name"%><br>
    <%= label_tag :'Password'%>
    <%= password_field :user, :password %><br>
    <%= submit_tag :Login %>
<% end %>