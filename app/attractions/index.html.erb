<% @attractions.each do |attraction| %>
  Name: <%= attraction.name %><br>
  Tickets: <%= attraction.tickets %><br>
  Nausea Rating: <%= attraction.nausea_rating %><br>
  Happiness Rating: <%= attraction.happiness_rating %><br>
  Minimum Height: <%= attraction.min_height %><br>

  <% if current_user.admin? %>
    <%= link_to "Show #{attraction.name}", attraction_path(attraction) %><br><br>
  <% else %>
    <%= link_to "Go on #{attraction.name}", attraction_path(attraction) %><br><br>
  <% end %>
<% end %>

<% if current_user.admin? %>
    <%= link_to "New Attraction", new_attraction_path %>
<% end %>